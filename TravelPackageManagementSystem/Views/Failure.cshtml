@{
    ViewData["Title"] = "Payment Failed";
    Layout = "_Layout";
}

<style>
    .failure-container {
        padding: 80px 20px;
        text-align: center;
        max-width: 600px;
        margin: 0 auto;
    }

    .failure-card {
        background: white;
        padding: 40px;
        border-radius: 20px;
        box-shadow: 0 15px 35px rgba(220, 53, 69, 0.1);
        border-top: 5px solid #dc3545;
    }

    /* Error Icon Animation */
    .error-circle {
        width: 100px;
        height: 100px;
        background: #dc3545;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 30px;
        animation: shake 0.5s ease-in-out;
    }

        .error-circle i {
            color: white;
            font-size: 50px;
        }

    .reason-box {
        background: #fff5f5;
        border: 1px solid #feb2b2;
        border-radius: 12px;
        padding: 15px;
        margin: 25px 0;
        color: #c53030;
    }

    .btn-retry {
        background: #2d3436;
        color: white;
        font-weight: bold;
        padding: 12px 30px;
        border-radius: 10px;
        text-decoration: none;
        display: inline-block;
        transition: all 0.2s;
        border: none;
        width: 100%;
    }

        .btn-retry:hover {
            background: #000;
            color: white;
            transform: translateY(-2px);
        }

    .support-link {
        margin-top: 20px;
        font-size: 14px;
        color: #666;
    }

    @@keyframes shake {
        0%, 100% {
            transform: translateX(0);
        }

        25% {
            transform: translateX(-10px);
        }

        75% {
            transform: translateX(10px);
        }
    }
</style>

<div class="failure-container">
    <div class="failure-card animate-fade-in">
        <div class="error-circle">
            <i class="fa fa-times"></i>
        </div>

        <h2 class="fw-bold">Payment Failed</h2>
        <p class="text-muted">We couldn't process your transaction at this time.</p>

        <div class="reason-box">
            <i class="fa fa-exclamation-triangle me-2"></i>
            <span id="error-message">Insufficient funds or incorrect card details.</span>
        </div>

        <p class="small text-muted mb-4">Don't worry, no money was deducted from your account. You can try a different payment method or check your card details.</p>

        <a href="javascript:history.back()" class="btn-retry mb-3">Try Again</a>

        <div class="mt-2">
            <a href="/Home/Index" class="text-decoration-none small text-secondary">Cancel and Return to Home</a>
        </div>

        <div class="support-link">
            Need help? <a href="/Home/Contact" class="text-primary">Contact Support</a>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const params = new URLSearchParams(window.location.search);
        if(params.has('reason')) {
            document.getElementById('error-message').innerText = params.get('reason');
        }
    });
</script>