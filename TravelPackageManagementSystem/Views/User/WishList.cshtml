@model IEnumerable<TravelPackageManagementSystem.Repository.Models.TravelPackage>

@{
    ViewData["Title"] = "My Wishlist";
    Layout = "_Layout";
}

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold">My Wishlist</h2>
            <p class="text-muted">Saved packages for your future adventures.</p>
        </div>
        <a asp-controller="User" asp-action="Profile" class="btn btn-outline-secondary rounded-pill">
            Back to Profile
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="text-center py-5 bg-light rounded-4">
            <i class="fas fa-heart-broken fa-4x text-muted mb-3"></i>
            <h4>Your wishlist is empty</h4>
            <p class="text-muted">Explore our destinations and save your favorites!</p>
            <a href="/Home/Index" class="btn btn-primary rounded-pill px-4 mt-2">Explore Packages</a>
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var pkg in Model)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card h-100 border-0 shadow-sm rounded-4 overflow-hidden">
                        <img src="@pkg.ImageUrl" class="card-img-top" style="height: 200px; object-fit: cover;">
                        <div class="card-body">
                            <div class="d-flex justify-content-between mb-2">
                                <h5 class="card-title fw-bold">@pkg.PackageName</h5>
                                <span class="badge bg-success bg-opacity-10 text-success">@pkg.Duration</span>
                            </div>
                            <p class="card-text text-muted small"><i class="fas fa-map-marker-alt me-1"></i> @pkg.Destination</p>
                            <h5 class="text-primary fw-bold">₹@pkg.Price.ToString("N0")</h5>
                        </div>

                        <div class="card-footer bg-white border-0 pb-3 pt-0 d-flex gap-2">

                            <a href="@Url.Action("PackageDetails", "Home", new { id = pkg.PackageId })" class="btn btn-primary flex-grow-1 rounded-3">
                                View Details
                            </a>

                            <form asp-action="RemoveFromWishlist" method="post">
                                <input type="hidden" name="packageId" value="@pkg.PackageId" />
                                <button type="submit" class="btn btn-outline-danger rounded-3" title="Remove">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>