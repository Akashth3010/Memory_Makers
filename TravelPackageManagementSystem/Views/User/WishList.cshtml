<style>
    .wish-card {
        border: 1px solid #e7e7e7;
        border-radius: 12px;
        transition: 0.3s;
        height: 100%;
    }

        .wish-card:hover {
            box-shadow: 0 8px 20px rgba(0,0,0,0.1);
            transform: translateY(-3px);
        }

    .wish-img {
        height: 160px;
        object-fit: cover;
        border-radius: 12px 12px 0 0;
    }

    .wish-title {
        font-size: 16px;
        font-weight: 700;
        color: #1a1a1a;
    }
</style>

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-end mb-4">
        <div>
            <h2 class="fw-bold mb-0">My Wishlist</h2>
            <p class="text-muted">Packages and experiences you’ve saved for later</p>
        </div>
        <button id="clearAllBtn" class="btn btn-outline-danger btn-sm rounded-pill px-3">Remove All</button>
    </div>

    <div id="wishlistEmpty" class="text-center py-5 bg-white rounded-4 shadow-sm" style="display:none;">
        <img src="https://promos.makemytrip.com/store/Holidays_Wishlist.png" width="150" class="mb-3">
        <h4>Your wishlist is empty!</h4>
        <p class="text-muted">Seems like you haven't liked anything yet.</p>
        <a href="/" class="btn btn-primary rounded-pill px-4 mt-2">Start Exploring</a>
    </div>

    <div class="row g-4" id="wishlistContainer"></div>
</div>

<script>
    function render() {
        const items = JSON.parse(localStorage.getItem('wishlist') || '[]');
        const container = document.getElementById('wishlistContainer');
        const emptyEl = document.getElementById('wishlistEmpty');

        container.innerHTML = '';
        if (items.length === 0) {
            emptyEl.style.display = 'block';
            return;
        }
        emptyEl.style.display = 'none';

        items.forEach((it, idx) => {
            container.innerHTML += `
                <div class="col-md-4 col-lg-3">
                    <div class="card wish-card">
                        <img src="${it.img || '/images/default-pkg.jpg'}" class="wish-img">
                        <div class="card-body p-3">
                            <div class="wish-title mb-1">${it.title}</div>
                            <div class="text-muted small mb-3">${it.subtitle || ''}</div>
                            <div class="d-flex gap-2">
                                <a href="${it.href}" class="btn btn-sm btn-primary w-100 rounded-pill">View</a>
                                <button onclick="removeAt(${idx})" class="btn btn-sm btn-outline-danger rounded-circle"><i class="fa-solid fa-trash-can"></i></button>
                            </div>
                        </div>
                    </div>
                </div>`;
        });
    }
</script>