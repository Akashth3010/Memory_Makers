@{
    ViewData["Title"] = "Member Profile";
    Layout = "_Layout";
}

<style>
    :root {
        --mmt-blue: #008cff;
        --mmt-gradient: linear-gradient(90deg, #008cff 0%, #0054ff 100%);
        --surface: #ffffff;
        --text-main: #1a1a1a;
        --text-muted: #5e5e5e;
        --border-color: #e7e7e7;
    }

    body {
        background-color: #f2f2f2;
        font-family: 'Lato', sans-serif;
    }

    /* Modern Profile Header */
    .profile-hero {
        background: var(--mmt-gradient);
        height: 180px;
        border-radius: 0 0 40px 40px;
        margin-bottom: -60px;
    }

    .main-card {
        background: var(--surface);
        border-radius: 20px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.08);
        border: none;
        padding: 30px;
    }

    .avatar-wrapper {
        width: 120px;
        height: 120px;
        background: white;
        border-radius: 50%;
        padding: 5px;
        box-shadow: 0 10px 20px rgba(0,0,0,0.1);
        margin-top: -90px;
        display: inline-block;
    }

    .avatar-initials {
        width: 100%;
        height: 100%;
        background: #fdf0e0;
        color: #eb7c01;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 2.5rem;
        font-weight: 900;
    }

    /* Table Styling like MMT */
    .mmt-table {
        border: 1px solid var(--border-color);
        border-radius: 12px;
        overflow: hidden;
    }

        .mmt-table thead {
            background: #f9f9f9;
            border-bottom: 1px solid var(--border-color);
        }

        .mmt-table th {
            font-size: 13px;
            color: var(--text-muted);
            text-transform: uppercase;
            padding: 15px;
        }

        .mmt-table td {
            padding: 18px 15px;
            border-bottom: 1px solid #f2f2f2;
            vertical-align: middle;
        }

    .status-badge {
        padding: 5px 12px;
        border-radius: 20px;
        font-size: 12px;
        font-weight: 700;
    }

    .status-confirmed {
        background: #e7f6ed;
        color: #00a94b;
    }

    .stat-box {
        text-align: center;
        padding: 20px;
        border-right: 1px solid #eee;
    }

        .stat-box:last-child {
            border-right: none;
        }
</style>

<div class="profile-hero"></div>

<div class="container pb-5" style="position: relative; z-index: 2;">
    <div class="row">
        <div class="col-12 text-center text-md-start">
            <div class="avatar-wrapper ms-md-4">
                <div class="avatar-initials" id="userInitials">--</div>
            </div>
        </div>
    </div>

    <div class="row g-4 mt-2">
        <div class="col-lg-8">
            <div class="main-card mb-4">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <div>
                        <h2 class="fw-bold mb-1" id="topName">Loading...</h2>
                        <p class="text-muted mb-0"><i class="fa-solid fa-envelope me-2"></i><span id="smallEmail"></span></p>
                    </div>
                    <a asp-controller="User" asp-action="Edit" class="btn btn-outline-primary rounded-pill px-4">Edit Profile</a>
                </div>

                <div class="row py-3 border-top border-bottom">
                    <div class="col-4 stat-box">
                        <div class="h4 fw-bold mb-0 text-primary" id="statTrips">0</div>
                        <div class="small text-muted">Bookings</div>
                    </div>
                    <div class="col-4 stat-box">
                        <div class="h4 fw-bold mb-0 text-success" id="statReviews">0</div>
                        <div class="small text-muted">Reviews</div>
                    </div>
                    <div class="col-4 stat-box">
                        <div class="h4 fw-bold mb-0 text-danger" id="statWishlist">0</div>
                        <div class="small text-muted">Wishlist</div>
                    </div>
                </div>
            </div>

            <div class="main-card">
                <h5 class="fw-bold mb-4">Recent Bookings</h5>
                <div class="table-responsive mmt-table">
                    <table class="table mb-0" id="bookingsTable">
                        <thead>
                            <tr>
                                <th>Booking Details</th>
                                <th>Travel Date</th>
                                <th>Status</th>
                                <th class="text-end">Manage</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="main-card mb-4">
                <h6 class="fw-bold mb-3">Personal Details</h6>
                <div class="mb-3">
                    <label class="small text-muted d-block">Phone Number</label>
                    <span class="fw-bold" id="lblPhone">--</span>
                </div>
                <div class="mb-3">
                    <label class="small text-muted d-block">Identity Verification</label>
                    <span class="badge bg-success-subtle text-success"><i class="fa-solid fa-circle-check me-1"></i> Verified</span>
                </div>
            </div>

            <form asp-controller="User" asp-action="Logout" method="post" id="logoutForm">
                <button type="button" class="btn btn-light w-100 py-3 rounded-3 fw-bold text-danger border" onclick="confirmLogout()">
                    <i class="fa-solid fa-power-off me-2"></i>Log Out
                </button>
            </form>
        </div>
    </div>
</div>

<script>
    async function loadProfile() {
        try {
            const response = await fetch('/User/GetProfileData');
            const data = await response.json();

            document.getElementById('topName').innerText = `${data.firstName} ${data.lastName}`;
            document.getElementById('lblPhone').innerText = data.phone || 'Add phone number';
            document.getElementById('smallEmail').innerText = data.email;
            document.getElementById('userInitials').innerText = (data.firstName[0] + data.lastName[0]).toUpperCase();

            document.getElementById('statTrips').innerText = data.bookingsCount || 0;
            document.getElementById('statReviews').innerText = data.reviewsCount || 0;
            document.getElementById('statWishlist').innerText = data.wishlistCount || 0;

            const tbody = document.querySelector('#bookingsTable tbody');
            tbody.innerHTML = data.recentBookings?.length ? data.recentBookings.map(b => `
                <tr>
                    <td>
                        <div class="fw-bold">${b.destination}</div>
                        <div class="text-muted x-small">ID: ${b.refNumber}</div>
                    </td>
                    <td class="small fw-bold">${b.dateRange || 'Pending'}</td>
                    <td><span class="status-badge status-confirmed">${b.status}</span></td>
                    <td class="text-end"><a href="#" class="btn btn-sm btn-link text-primary">Details</a></td>
                </tr>
            `).join('') : '<tr><td colspan="4" class="text-center py-4">No bookings yet. Start exploring!</td></tr>';
        } catch (e) { console.error(e); }
    }
    document.addEventListener('DOMContentLoaded', loadProfile);
</script>