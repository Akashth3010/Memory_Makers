@model TravelPackageManagementSystem.Repository.Models.TravelPackage

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-dark text-white p-4">
                    <h2 class="mb-0">Add New Travel Package</h2>
                </div>
                <div class="card-body p-5">
                    <form asp-action="CreatePackage" method="post">
                        <div class="row g-3">
                            <div class="col-md-12">
                                <label class="form-label">Package Name</label>
                                <input asp-for="PackageName" class="form-control rounded-pill" placeholder="e.g. Mumbai Heritage" required />
                            </div>

                            <div class="col-md-6">
                                <label class="form-label">Destination (State)</label>
                                <select asp-for="DestinationId" class="form-select rounded-pill" asp-items="ViewBag.Destinations"></select>
                            </div>

                            <div class="col-md-6">
                                <label class="form-label">Specific Location</label>
                                <input asp-for="Location" class="form-control rounded-pill" placeholder="e.g. Gateway of India" required />
                            </div>

                            <div class="col-md-4">
                                <label class="form-label">Price (INR)</label>
                                <input asp-for="Price" type="number" class="form-control rounded-pill" required />
                            </div>

                            <div class="col-md-4">
                                <label class="form-label">Duration</label>
                                <input asp-for="Duration" class="form-control rounded-pill" placeholder="e.g. 5 Days" required />
                            </div>

                            <div class="col-md-4 d-flex align-items-end px-3">
                                <div class="form-check form-switch">
                                    <input asp-for="IsTrending" class="form-check-input" type="checkbox" id="trendingSwitch">
                                    <label class="form-check-label" for="trendingSwitch">Mark as Trending?</label>
                                </div>
                            </div>

                            <div class="col-12 mt-4">
                                <label class="form-label">Image URL</label>
                                <input asp-for="ImageUrl" class="form-control rounded-pill" placeholder="/lib/TrendingImage/name.jpg" />
                            </div>

                            <div class="col-12 mt-4">
                                <button type="submit" class="btn btn-success w-100 rounded-pill py-2 fw-bold">Save Package & Add Card</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>