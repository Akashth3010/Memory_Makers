<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Easy Safar</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/navbar.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Auth.css" asp-append-version="true" />
</head>
<body>

    @if (ViewData["Title"]?.ToString() != "Home Page")
    {
        <nav class="safar-navbar">
            <div class="nav-container">
                <a class="nav-logo" asp-controller="Home" asp-action="Index">
                    Easy<span>Safar</span>
                </a>

                <ul class="navbar-nav-row">
                    <li><a class="nav-link" href="@Url.Action("Index", "Home")#top-destinations">Holidays</a></li>
                    <li><a class="nav-link" asp-controller="Home" asp-action="TravelGuide">Travel Guide</a></li>
                    <li><a class="nav-link" asp-controller="Home" asp-action="CustomerSupport">Support</a></li>
                    <li><a class="nav-link" asp-controller="Home" asp-action="MyBookings">My Bookings</a></li>
                </ul>

                <a asp-controller="Home" asp-action="Booking" class="nav-btn-slim">Book Now</a>
            </div>
        </nav>
    }
    <main role="main">
        @RenderBody()
    </main>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
    @await Html.PartialAsync("_AdminLoginModal")
</body>
</html>