@using Microsoft.AspNetCore.Http
@{
    ViewData["Title"] = "Become a Host";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>easy Safar | Become a Host</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />
    <link href="~/css/host.css" rel="stylesheet" />

    <style>
        .modal-content {
            border-radius: 20px;
            border: none;
            overflow: hidden;
            box-shadow: 0 15px 50px rgba(0,0,0,0.3);
            position: relative; /* Ensure close button positions relative to this */
        }

        .auth-header {
            padding: 25px;
            text-align: center;
            color: white;
            font-weight: 800;
            font-size: 22px;
            position: relative; /* Context for the close button */
        }

        /* --- NEW: Close Button Style --- */
        .modal-close-icon {
            position: absolute;
            top: 20px;
            right: 20px;
            color: white;
            font-size: 24px;
            cursor: pointer;
            opacity: 0.8;
            transition: 0.3s;
            z-index: 100;
        }

            .modal-close-icon:hover {
                opacity: 1;
                transform: scale(1.1) rotate(90deg); /* Nice hover effect */
            }

        .login-header {
            background: #3498db;
        }

        .signup-header {
            background: #27ae60;
        }

        .auth-modal-body {
            padding: 30px;
        }

        .auth-field-label {
            font-weight: 700;
            color: #4a5568;
            font-size: 13px;
            margin-bottom: 5px;
            display: block;
        }

        /* --- Password Wrapper for Eye Icon --- */
        .password-wrapper {
            position: relative;
            width: 100%;
        }

        .toggle-icon {
            position: absolute;
            right: 15px;
            top: 50%;
            transform: translateY(-50%);
            cursor: pointer;
            color: #a0aec0;
            z-index: 10;
        }

            .toggle-icon:hover {
                color: #3498db;
            }

        .auth-input {
            width: 100%;
            padding: 12px 15px;
            padding-right: 40px;
            border: 2px solid #edf2f7;
            border-radius: 12px;
            margin-bottom: 15px;
            transition: 0.3s;
        }

            .auth-input:focus {
                outline: none;
                border-color: #3498db;
                background: #f8fafc;
            }

            .auth-input:invalid {
                border-color: #e74c3c;
            }

            .auth-input:valid {
                border-color: #2ecc71;
            }

        .auth-btn {
            width: 100%;
            padding: 14px;
            border: none;
            border-radius: 12px;
            color: white;
            font-weight: 700;
            font-size: 16px;
            margin-top: 10px;
            transition: 0.3s;
            cursor: pointer;
        }

        .login-btn {
            background: #3498db;
        }

        .signup-btn {
            background: #27ae60;
        }

        .auth-btn:hover {
            opacity: 0.9;
            transform: translateY(-2px);
        }

        .auth-btn:disabled, .submit-btn:disabled {
            background-color: #cbd5e0;
            cursor: not-allowed;
            transform: none;
        }

        .toggle-link {
            color: #3498db;
            font-weight: 800;
            cursor: pointer;
            text-decoration: none;
        }

            .toggle-link:hover {
                text-decoration: underline;
            }

        .auth-footer {
            text-align: center;
            margin-top: 20px;
            font-size: 14px;
            color: #718096;
        }

        .error-message {
            color: #e74c3c;
            font-size: 12px;
            margin-top: -10px;
            margin-bottom: 10px;
            display: none;
            font-weight: bold;
        }
    </style>
</head>

<body>

    <div class="sticky-nav">
        <div class="top-info-bar">
            <div class="info-left">
                <span><i class="fa fa-phone"></i> (+91) 9512535115</span>
                <span><i class="fa fa-envelope"></i> memorymakers@gmail.com</span>
            </div>
            <div class="info-right">
                <a href="#"><i class="fab fa-facebook-f"></i></a>
                <a href="#"><i class="fab fa-linkedin-in"></i></a>

                @if (Context.Session.GetString("HostName") != null)
                {
                    <a href="/Home/HostProfile" style="color: #f1c40f; font-weight: bold; text-decoration: none;">
                        <i class="fa fa-user-check"></i> Hi, @Context.Session.GetString("HostName")
                    </a>
                }
                else
                {
                    <a href="javascript:void(0)" data-bs-toggle="modal" data-bs-target="#hostAuthModal">
                        <i class="fa fa-user-circle"></i> Sign in / Sign up
                    </a>
                }
            </div>
        </div>

        <div class="main-navbar">
            <div class="brand">
                <i class="fa-solid fa-location-arrow"></i>
                <span>easy Safar</span>
            </div>
            <div class="menu">
                <a asp-controller="Home" asp-action="Index">Home</a>
            </div>
        </div>
    </div>

    <section class="hero-slider">
        <div class="slides active" style="background-image:url('/lib/Image/Adventure.jpeg')">
            <div class="hero-content">
                <h1 class="hero-title">Become a Travel Host</h1>
                <p class="hero-subtitle">Share your packages. Create memories.</p>
            </div>
        </div>
        <div class="slides" style="background-image:url('/lib/Image/city.jpeg')">
            <div class="hero-content">
                <h1 class="hero-title">Share Your Packages</h1>
                <p class="hero-subtitle">Reach thousands of travelers easily.</p>
            </div>
        </div>
        <div class="slides" style="background-image:url('/lib/Image/travel.jpeg')">
            <div class="hero-content">
                <h1 class="hero-title">Grow Your Travel Business</h1>
                <p class="hero-subtitle">Partner with easy Safar today.</p>
            </div>
        </div>
    </section>

    <section class="why-host">
        <h2>Why Become a Host?</h2>
        <div class="why-cards">
            <div class="why-card"><i class="fa fa-wallet"></i><h5>Earn More</h5></div>
            <div class="why-card"><i class="fa fa-globe"></i><h5>Wide Reach</h5></div>
            <div class="why-card"><i class="fa fa-shield-halved"></i><h5>Trusted Platform</h5></div>
            <div class="why-card"><i class="fa fa-bolt"></i><h5>Easy Approval</h5></div>
        </div>
    </section>

    <section class="approval-flow" id="approvalFlow">
        <h2>How Approval Works</h2>
        <div class="flow-steps">
            <div class="step"><span>1</span><p>Submit Package Details</p></div>
            <div class="step"><span>2</span><p>Admin Reviews Information</p></div>
            <div class="step"><span>3</span><p>Package Goes Live</p></div>
        </div>
    </section>

    <section class="form-section">
        <div class="form-card">
            <h3 class="form-title">Host Package Submission</h3>
            <p class="form-subtitle">Please provide accurate details for faster approval</p>

            <form id="hostForm" novalidate>
                <div class="form-group-box">
                    <h5 class="section-title"><i class="fa fa-address-book"></i> Contact Details</h5>
                    <div class="row">
                        <div class="col-md-6">
                            <label class="field-label">Host / Agency Name *</label>
                            <input type="text" name="HostAgencyName" placeholder="Enter Agency Name" required />
                        </div>
                        <div class="col-md-6">
                            <label class="field-label">Email Address *</label>
                            <input type="email" name="EmailAddress" placeholder="Enter Email" required />
                        </div>
                        <div class="col-md-6">
                            <label class="field-label">Phone Number *</label>
                            <input type="tel" name="PhoneNumber" placeholder="10 Digit Mobile Number" pattern="[0-9]{10}" required />
                        </div>
                        <div class="col-md-6">
                            <label class="field-label">City / Country *</label>
                            <input type="text" name="CityCountry" placeholder="e.g. Mumbai, India" required />
                        </div>
                    </div>
                </div>

                <div class="form-group-box">
                    <h5 class="section-title"><i class="fa fa-box"></i> Package Information</h5>
                    <div class="row">
                        <div class="col-md-6">
                            <label class="field-label">Package Name *</label>
                            <input type="text" name="PackageName" placeholder="e.g. Divine Meghalaya" required />
                        </div>
                        <div class="col-md-6">
                            <label class="field-label">Destination *</label>
                            <input type="text" name="Destination" placeholder="e.g. Shillong" required />
                        </div>
                        <div class="col-md-6">
                            <label class="field-label">Specific Location *</label>
                            <input type="text" name="Location" placeholder="e.g. East Khasi Hills" required />
                        </div>
                        <div class="col-md-6">
                            <label class="field-label">Package Type *</label>
                            <select name="PackageType" required>
                                <option value="">Select Type</option>
                                <option>Family</option>
                                <option>Honeymoon</option>
                                <option>Friends Trip</option>
                                <option>Adventure</option>
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label class="field-label">Duration *</label>
                            <input type="text" name="Duration" placeholder="e.g. 5 Days / 4 Nights" required />
                        </div>
                        <div class="col-md-6">
                            <label class="field-label">Total Price (INR) *</label>
                            <input type="number" name="Price" placeholder="Enter total cost" required />
                        </div>
                    </div>
                    <label class="field-label">Package Description *</label>
                    <textarea name="Description" rows="3" placeholder="Summarize your package details" required></textarea>
                </div>

                <div class="form-group-box">
                    <h5 class="section-title"><i class="fa fa-image"></i> Media & Gallery (Optional)</h5>
                    <div class="row">
                        <div class="col-md-6">
                            <label class="field-label">Main Image URL</label>
                            <input type="text" name="ImageUrl" placeholder="Link to main photo" />
                        </div>
                        <div class="col-md-6">
                            <label class="field-label">Thumbnail 1 URL</label>
                            <input type="text" name="ThumbnailUrl1" placeholder="Small image link 1" />
                        </div>
                        <div class="col-md-6">
                            <label class="field-label">Thumbnail 2 URL</label>
                            <input type="text" name="ThumbnailUrl2" placeholder="Small image link 2" />
                        </div>
                        <div class="col-md-6">
                            <label class="field-label">Thumbnail 3 URL</label>
                            <input type="text" name="ThumbnailUrl3" placeholder="Small image link 3" />
                        </div>
                    </div>
                </div>

                <div class="form-group-box">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h5 class="section-title m-0"><i class="fa fa-calendar-alt"></i> Day-by-Day Itinerary</h5>
                        <button type="button" class="btn btn-sm btn-outline-primary" onclick="addDay()"><i class="fa fa-plus"></i> Add Day</button>
                    </div>
                    <div id="itineraryContainer">
                        <div class="itinerary-item">
                            <div class="day-badge">Day 1</div>
                            <label class="field-label">Activity Title *</label>
                            <input type="text" class="it-title" placeholder="e.g. Arrival & Hotel Check-in" required />
                            <label class="field-label">Activity Description *</label>
                            <textarea class="it-desc" placeholder="Describe the day's events" required></textarea>
                            <div class="row">
                                <div class="col-md-6">
                                    <label class="field-label">Inclusions</label>
                                    <input type="text" class="it-inc" placeholder="Breakfast; SUV; Guide" />
                                </div>
                                <div class="col-md-6">
                                    <label class="field-label">Exclusions</label>
                                    <input type="text" class="it-exc" placeholder="Lunch; Personal Tips" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <button type="submit" id="mainSubmitBtn" class="submit-btn">Submit Package for Review</button>
                <div class="trust-box">🔒 Your details are encrypted and manually reviewed by the admin.</div>
            </form>
        </div>
    </section>

    <div class="modal fade" id="hostAuthModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">

                <div id="loginSection">
                    <div class="auth-header login-header">
                        <h4 style="margin:0;">Host Login</h4>
                        <i class="fa-solid fa-xmark modal-close-icon" data-bs-dismiss="modal"></i>
                    </div>
                    <div class="auth-modal-body">
                        <form id="loginForm">
                            <label class="auth-field-label">Email Address</label>
                            <input type="email" class="auth-input" name="Email" placeholder="Enter your registered email" required>

                            <label class="auth-field-label">Password</label>
                            <div class="password-wrapper">
                                <input type="password" class="auth-input" id="loginPass" name="Password" placeholder="Enter your password" required>
                                <i class="fa fa-eye toggle-icon" onclick="togglePass('loginPass', this)"></i>
                            </div>

                            <button type="submit" id="loginBtn" class="auth-btn login-btn">Login to Dashboard</button>

                            <div class="auth-footer">
                                <span>New to easy Safar? <a class="toggle-link" onclick="toggleAuth('signup')">Sign Up Here</a></span>
                            </div>
                        </form>
                    </div>
                </div>

                <div id="signupSection" style="display:none;">
                    <div class="auth-header signup-header">
                        <h4 style="margin:0;">Register as Host</h4>
                        <i class="fa-solid fa-xmark modal-close-icon" data-bs-dismiss="modal"></i>
                    </div>
                    <div class="auth-modal-body">
                        <form id="signupForm">
                            <label class="auth-field-label">Host / Agency Name</label>
                            <input type="text" class="auth-input" name="HostAgencyName" placeholder="e.g. Dream Travels" required>

                            <label class="auth-field-label">Email Address</label>
                            <input type="email" class="auth-input" name="EmailAddress" placeholder="e.g. contact@dreamtravels.com" required>

                            <div class="row">
                                <div class="col-6">
                                    <label class="auth-field-label">Phone Number</label>
                                    <input type="tel" class="auth-input" name="PhoneNumber" pattern="[0-9]{10}" placeholder="10 Digit Mobile" required>
                                </div>
                                <div class="col-6">
                                    <label class="auth-field-label">City / Country</label>
                                    <input type="text" class="auth-input" name="CityCountry" placeholder="e.g. Mumbai, India" required>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-6">
                                    <label class="auth-field-label">Password</label>
                                    <div class="password-wrapper">
                                        <input type="password" class="auth-input" name="Password" id="signupPassword" placeholder="Create Password" required>
                                        <i class="fa fa-eye toggle-icon" onclick="togglePass('signupPassword', this)"></i>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <label class="auth-field-label">Confirm Password</label>
                                    <div class="password-wrapper">
                                        <input type="password" class="auth-input" id="confirmPassword" placeholder="Repeat Password" required>
                                        <i class="fa fa-eye toggle-icon" onclick="togglePass('confirmPassword', this)"></i>
                                    </div>
                                </div>
                            </div>
                            <div id="passwordError" class="error-message">Passwords do not match!</div>

                            <button type="submit" id="signupBtn" class="auth-btn signup-btn">Create Host Account</button>

                            <div class="auth-footer">
                                <span>Already have an account? <a class="toggle-link" onclick="toggleAuth('login')">Login Here</a></span>
                            </div>
                        </form>
                    </div>
                </div>

            </div>
        </div>
    </div>

    <div class="popup-overlay" id="successPopup">
        <div class="popup-box">
            <i class="fa-solid fa-circle-check" style="color: #48bb78; font-size: 50px; margin-bottom: 20px;"></i>
            <h4 style="font-weight: 800; margin-bottom: 10px;">Submission Successful!</h4>
            <p>Your package has been sent to the admin for approval.</p>
            <button onclick="closePopup()" class="btn btn-primary">OK</button>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        const slides = document.querySelectorAll('.slides');
        let slideIndex = 0;
        setInterval(() => {
            slides[slideIndex].classList.remove('active');
            slideIndex = (slideIndex + 1) % slides.length;
            slides[slideIndex].classList.add('active');
        }, 3000);

        function toggleAuth(view) {
            if (view === 'signup') {
                $('#loginSection').hide();
                $('#signupSection').fadeIn();
            } else {
                $('#signupSection').hide();
                $('#loginSection').fadeIn();
            }
        }

        // --- PASSWORD VISIBILITY TOGGLE ---
        function togglePass(id, icon) {
            const input = document.getElementById(id);
            if (input.type === "password") {
                input.type = "text";
                icon.classList.remove("fa-eye");
                icon.classList.add("fa-eye-slash");
            } else {
                input.type = "password";
                icon.classList.remove("fa-eye-slash");
                icon.classList.add("fa-eye");
            }
        }

        // --- NEW SIGN UP AJAX ---
        $('#signupForm').on('submit', function (e) {
            e.preventDefault();

            // Password Check
            var password = $('#signupPassword').val();
            var confirm = $('#confirmPassword').val();
            if(password !== confirm) {
                $('#passwordError').show();
                return;
            } else {
                $('#passwordError').hide();
            }

            // Disable button to prevent double submit
            var $btn = $('#signupBtn');
            var originalText = $btn.text();
            $btn.prop('disabled', true).text('Creating Account...');

            var data = {
                HostAgencyName: $(this).find('[name="HostAgencyName"]').val(),
                EmailAddress: $(this).find('[name="EmailAddress"]').val(),
                PhoneNumber: $(this).find('[name="PhoneNumber"]').val(),
                CityCountry: $(this).find('[name="CityCountry"]').val(),
                Password: password
            };

            $.ajax({
                url: '/Home/RegisterHost',
                type: 'POST',
                contentType: 'application/json',
                data: JSON.stringify(data),
                success: function (res) {
                    $btn.prop('disabled', false).text(originalText);
                    if (res.success) {
                        alert("Registration successful! Please login.");
                        toggleAuth('login');
                    } else {
                        alert("Error: " + res.message);
                    }
                },
                error: function() {
                    $btn.prop('disabled', false).text(originalText);
                    alert("Server Error.");
                }
            });
        });

        // --- NEW LOGIN AJAX ---
        $('#loginForm').on('submit', function (e) {
            e.preventDefault();

            var $btn = $('#loginBtn');
            var originalText = $btn.text();
            $btn.prop('disabled', true).text('Logging in...');

            var data = {
                Email: $(this).find('[name="Email"]').val(),
                Password: $(this).find('[name="Password"]').val()
            };

            $.ajax({
                url: '/Home/LoginHost',
                type: 'POST',
                contentType: 'application/json',
                data: JSON.stringify(data),
                success: function (res) {
                    $btn.prop('disabled', false).text(originalText);
                    if (res.success) {
                        window.location.href = '/Home/HostProfile';
                    } else {
                        alert("Login failed: " + res.message);
                    }
                },
                error: function() {
                    $btn.prop('disabled', false).text(originalText);
                    alert("Server Error.");
                }
            });
        });

        function addDay() {
            const container = document.getElementById("itineraryContainer");
            const dayCount = container.getElementsByClassName("itinerary-item").length + 1;
            const dayHtml = `<div class="itinerary-item mt-3">...Day ${dayCount}...</div>`;
            container.insertAdjacentHTML('beforeend', dayHtml);
        }

        const stepObserver = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                const steps = entry.target.querySelectorAll('.step');
                entry.isIntersecting ? steps.forEach(s => s.classList.add('show')) : steps.forEach(s => s.classList.remove('show'));
            });
        }, { threshold: 0.2 });
        stepObserver.observe(document.querySelector('.flow-steps'));

        document.getElementById("hostForm").addEventListener("submit", function (e) {
            e.preventDefault();

            // Disable submit to prevent double-click
            const btn = document.getElementById("mainSubmitBtn");
            const originalText = btn.innerText;
            btn.disabled = true;
            btn.innerText = "Submitting...";

            let itineraries = [];
            document.querySelectorAll(".itinerary-item").forEach((item, index) => {
                itineraries.push({
                    dayNumber: index + 1,
                    title: item.querySelector(".it-title").value,
                    desc: item.querySelector(".it-desc").value,
                    inclusions: item.querySelector(".it-inc").value,
                    exclusions: item.querySelector(".it-exc").value
                });
            });

            let data = {
                HostAgencyName: this.querySelector('[name="HostAgencyName"]').value,
                EmailAddress: this.querySelector('[name="EmailAddress"]').value,
                PhoneNumber: this.querySelector('[name="PhoneNumber"]').value,
                CityCountry: this.querySelector('[name="CityCountry"]').value,
                PackageName: this.querySelector('[name="PackageName"]').value,
                Destination: this.querySelector('[name="Destination"]').value,
                Location: this.querySelector('[name="Location"]').value,
                PackageType: this.querySelector('[name="PackageType"]').value,
                Duration: this.querySelector('[name="Duration"]').value,
                Price: parseFloat(this.querySelector('[name="Price"]').value),
                Description: this.querySelector('[name="Description"]').value,
                ImageUrl: this.querySelector('[name="ImageUrl"]').value,
                ThumbnailUrl1: this.querySelector('[name="ThumbnailUrl1"]').value,
                ThumbnailUrl2: this.querySelector('[name="ThumbnailUrl2"]').value,
                ThumbnailUrl3: this.querySelector('[name="ThumbnailUrl3"]').value,
                Itineraries: itineraries
            };

            $.ajax({
                url: '/Home/SubmitPackage',
                type: 'POST',
                contentType: 'application/json',
                data: JSON.stringify(data),
                success: function (response) {
                    btn.disabled = false;
                    btn.innerText = originalText;

                    if (response.success) {
                        document.getElementById("successPopup").style.display = "flex";
                        document.getElementById("hostForm").reset();
                        // Optional: Reset itineraries
                    } else {
                        alert("Submission Failed: " + response.message);
                    }
                },
                error: function () {
                    btn.disabled = false;
                    btn.innerText = originalText;
                    alert("Server Error. Please try again.");
                }
            });
        });

        function closePopup() {
            document.getElementById("successPopup").style.display = "none";
        }
    </script>
</body>
</html>