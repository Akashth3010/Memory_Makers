@{
    Layout = "_Layout";
}

<link rel="stylesheet" href="~/css/header-search.css" />

<header class="header-wrapper">
    <div class="overlay"></div>

    <div class="top-bar">
        <div class="container-fluid d-flex justify-content-between align-items-center px-4">
            <div class="top-left">
                <i class="fa-solid fa-phone"></i> (+91) 9512535115
                <span class="ms-3"><i class="fa-solid fa-envelope"></i> easysafar@gmail.com</span>
            </div>

            <div class="top-right">
                <i class="fab fa-facebook-f"></i>
                <i class="fab fa-x mx-3"></i>
                <i class="fab fa-linkedin-in"></i>
                <span class="ms-4 text-white pointer-cursor">
                    <a asp-controller="Home" asp-action="Host" class="text-white text-decoration-none">Become a Host</a>
                </span>

                <div id="authSection" class="d-inline-block ms-4">
                    <span class="text-white pointer-cursor" data-bs-toggle="modal" data-bs-target="#authModal">
                        Sign in / Sign up
                    </span>
                </div>

                <span class="ms-4 text-white pointer-cursor" onclick="openAdminLogin()">Admin Login</span>
            </div>
        </div>
    </div>

    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container-fluid px-4">
            <a class="navbar-brand fw-bold" href="#"><i class="fa-solid fa-paper-plane"></i> EasySafar</a>
            <div class="collapse navbar-collapse justify-content-end">
                <ul class="navbar-nav gap-4">
                    <li class="nav-item"><a class="nav-link" href="@Url.Action("Index", "Home")#top-destinations">Holidays</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="TravelGuide">Travel Guide</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="CustomerSupport">Customer Support</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="MyBookings">My Bookings</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container-fluid hero-content text-center">
        <h1>Let's Travel India Together!</h1>
        <p>Find awesome flights, hotels, holidays, cabs, buses and cruise</p>
    </div>
</header>

<section class="search-panel">
    <div class="container">
        <div class="search-box shadow-lg">
            <form id="searchForm">
                <div class="row g-3 align-items-end">
                    <div class="col-md-4">
                        <label class="form-label">Destination</label>
                        <select id="destInput" class="form-control">
                            <option value="">Where are you going?</option>
                            <option value="meghalaya">Meghalaya</option>
                            <option value="sikkim">Sikkim</option>
                            <option value="arunachal">Arunachal Pradesh</option>
                            <option value="assam">Assam</option>
                        </select>
                    </div>

                    <div class="col-md-3">
                        <label class="form-label">Departure - Return</label>
                        <input type="date" id="dateInput" class="form-control" />
                    </div>

                    <div class="col-md-3">
                        <label class="form-label">Travellers</label>
                        <select id="travellerInput" class="form-control">
                            <option value="1">1 Adult</option>
                            <option value="2">2 Adults</option>
                            <option value="3">2 Adults, 1 Child</option>
                            <option value="4">Family Pack (4+)</option>
                        </select>
                    </div>

                    <div class="col-md-2 d-grid">
                        <button class="btn btn-primary btn-lg" type="submit">Search Packages</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>

<div class="modal fade" id="authModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <button type="button" class="btn-close modal-close-btn" data-bs-dismiss="modal" aria-label="Close"></button>
            <div class="modal-body p-4 p-md-5">
                <div class="text-center mb-4">
                    <h2 id="modalTitle" class="auth-title fw-bold">Create an Account</h2>
                    <p id="modalSubtitle" class="auth-subtitle">Join EasySafar to start your journey.</p>
                </div>

                <form id="authForm" novalidate>
                    <div class="row g-3 mb-3 signup-only">
                        <div class="col-md-6">
                            <label class="input-label">First Name</label>
                            <input type="text" class="auth-input form-control" placeholder="Tyler" name="firstName" />
                        </div>
                        <div class="col-md-6">
                            <label class="input-label">Last Name</label>
                            <input type="text" class="auth-input form-control" placeholder="Durden" name="lastName" />
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="input-label">Email Address</label>
                        <input type="email" class="auth-input form-control" placeholder="name@example.com" name="email" required />
                    </div>

                    <div class="mb-3">
                        <label class="input-label">Password</label>
                        <input type="password" class="auth-input form-control" placeholder="••••••••" name="password" required />
                    </div>

                    <div class="signup-only mb-4">
                        <label class="input-label">Confirm Password</label>
                        <input type="password" class="auth-input form-control" placeholder="••••••••" name="confirmPassword" />
                    </div>

                    <div class="d-grid">
                        <button type="submit" id="submitBtn" class="submit-glow-btn">Sign Up &rarr;</button>
                    </div>
                </form>

                <div class="text-center mt-4">
                    <p class="footer-text mb-0">
                        <span id="toggleText">Already have an account?</span>
                        <a href="javascript:void(0)" id="toggleAuth" class="footer-link">Login</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/auth-search.js"></script>
}