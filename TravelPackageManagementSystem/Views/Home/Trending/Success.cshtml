@{
    ViewData["Title"] = "Payment Successful";
    Layout = "_Layout";
}

<style>
    .success-container {
        padding: 80px 20px;
        text-align: center;
        max-width: 600px;
        margin: 0 auto;
    }

    .success-card {
        background: white;
        padding: 40px;
        border-radius: 20px;
        box-shadow: 0 15px 35px rgba(0,0,0,0.1);
    }

    /* Checkmark Animation */
    .checkmark-circle {
        width: 100px;
        height: 100px;
        background: #28a745;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 30px;
        animation: scaleUp 0.5s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    }

        .checkmark-circle i {
            color: white;
            font-size: 50px;
        }

    .order-details {
        background: #f8f9fa;
        border-radius: 12px;
        padding: 20px;
        margin: 25px 0;
        text-align: left;
    }

    .detail-row {
        display: flex;
        justify-content: space-between;
        margin-bottom: 10px;
        font-size: 14px;
    }

    .btn-home {
        background: linear-gradient(135deg, #ff7b54, #ffd56b);
        border: none;
        color: black;
        font-weight: bold;
        padding: 12px 30px;
        border-radius: 10px;
        text-decoration: none;
        display: inline-block;
        transition: transform 0.2s;
    }

        .btn-home:hover {
            transform: translateY(-3px);
            color: black;
        }

    @@keyframes scaleUp {
        from {
            transform: scale(0);
            opacity: 0;
        }

        to {
            transform: scale(1);
            opacity: 1;
        }
    }
</style>

<div class="success-container">
    <div class="success-card animate-fade-in">
        <div class="checkmark-circle">
            <i class="fa fa-check"></i>
        </div>

        <h2 class="fw-bold">Payment Successful!</h2>
        <p class="text-muted">Pack your bags! Your adventure in the Abode of Clouds is officially booked.</p>

        <div class="order-details">
            <h6 class="fw-bold mb-3 border-bottom pb-2">Booking Summary</h6>
            <div class="detail-row">
                <span>Transaction ID:</span>
                <span id="res-txn" class="fw-bold">TXN-83920174</span>
            </div>
            <div class="detail-row">
                <span>Package:</span>
                <span id="res-package">Meghalaya Explorer (Premium)</span>
            </div>
            <div class="detail-row">
                <span>Amount Paid:</span>
                <span id="res-amount" class="text-success fw-bold">₹0</span>
            </div>
            <div class="detail-row">
                <span>Status:</span>
                <span class="badge bg-success">Confirmed</span>
            </div>
        </div>

        <p class="small text-muted mb-4">A confirmation email has been sent to your registered address.</p>

        <a href="/Home/Index" class="btn-home">Return to Home</a>
        <div class="mt-3">
            <a href="/Home/MyBookings" class="text-decoration-none small text-primary">View My Bookings</a>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        // You can pass these via QueryString from your Payment API
        // Example: /Home/Success?txn=123&amt=25999
        const params = new URLSearchParams(window.location.search);

        if(params.has('txn')) {
            document.getElementById('res-txn').innerText = params.get('txn');
        }

        // If you still have data in localStorage from the previous page
        const savedPrice = localStorage.getItem('lastPaidAmount');
        const savedName = localStorage.getItem('selectedPackageName');

        if (savedPrice) document.getElementById('res-amount').innerText = savedPrice;
        if (savedName) document.getElementById('res-package').innerText = savedName;
    });
</script>
