@{
    ViewBag.Title = "Quick Escape - Meghalaya";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/css/pack-details.css" />
</head>

<body>
    <section class="hero" style="background-image: url('/lib/Image/meg6.jpg')">
        <div class="hero-content">
            <h1>Quick Escape</h1>
            <p>3 Days • Shillong Peak • Elephant Falls • Laitlum Canyons</p>
        </div>
    </section>

    <div class="container">
        <div class="flex">
            <div class="left-col">
                <div class="package-header">
                    <div class="package-title">
                        <h2 id="packageName">Shillong: The Scotland of the East</h2>
                        <div class="rating">★ 4.6 (120 reviews)</div>
                    </div>
                    <div style="text-align: right;">
                        <div style="font-size: 14px; color:#666;">Duration</div>
                        <div style="font-weight:700; font-size:16px;">3 Days / 2 Nights</div>
                    </div>
                </div>

                <div class="gallery">
                    <div id="mainImage" class="main-image" style="background-image: url('/lib/Image/megbg.jpg');"></div>
                    <div class="thumbs">
                        <div class="thumb active" data-src="/lib/Image/meghalaya.jpg" style="background-image: url('/lib/Image/meghalaya.jpg');"></div>
                        <div class="thumb" data-src="/lib/Image/meg3.jpg" style="background-image: url('/lib/Image/meg3.jpg');"></div>
                        <div class="thumb" data-src="/lib/Image/meg4.jpg" style="background-image: url('/lib/Image/meg4.jpg');"></div>
                        <div class="thumb" data-src="/lib/Image/meg5.jpg" style="background-image: url('/lib/Image/meg5.jpg');"></div>
                    </div>
                </div>

                <div id="lightbox" class="lightbox">
                    <img id="lightboxImg" src="/lib/Image/meghalaya.jpg" alt="Large view" />
                </div>

                <div style="margin-top:16px;">
                    <h3>Overview</h3>
                    <p>Perfect for a quick weekend getaway. Explore the mist-covered peaks of Shillong and the roaring Elephant Falls in a compact, stress-free itinerary.</p>
                </div>

                <div class="itinerary">
                    <h3 style="margin-bottom:10px;">Day-by-Day Itinerary</h3>
                    <div class="day">
                        <div class="day-header"><h4>Day 1 — Arrival & Police Bazar</h4><div class="toggle">+</div></div>
                        <div class="day-body"><p>Pickup from Guwahati, drive to Shillong. Evening walk at the vibrant local markets.</p></div>
                    </div>
                    <div class="day">
                        <div class="day-header"><h4>Day 2 — Shillong Local Wonders</h4><div class="toggle">+</div></div>
                        <div class="day-body"><p>Full day visiting Shillong Peak, Elephant Falls, and the breathtaking Laitlum Canyons.</p></div>
                    </div>
                    <div class="day">
                        <div class="day-header"><h4>Day 3 — Departure</h4><div class="toggle">+</div></div>
                        <div class="day-body"><p>Final breakfast in the hills and transfer back to Guwahati airport/station.</p></div>
                    </div>
                </div>

                <div class="price-card">
                    <div class="price-row">
                        <div>Base Price (per person)</div>
                        <div class="price-total">₹9,999</div>
                    </div>
                    <div class="price-row">
                        <div>Selected Guests</div>
                        <div id="priceSummary">1 person</div>
                    </div>
                    <hr style="margin:10px 0; border:none; border-top:1px solid #e6e9ef;" />
                    <div style="font-weight:700; display:flex; justify-content:space-between;">
                        <div>Total Payable</div>
                        <div class="price-total" id="totalPayable">₹9,999</div>
                    </div>
                    <div style="margin-top:12px;">
                        <h4 style="font-size:15px; margin-bottom:6px;">What's Included</h4>
                        <div class="list-inline">
                            <div class="included">Standard Hotel Stay</div>
                            <div class="included">Daily Breakfast</div>
                            <div class="included">AC Private Cab</div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="right-col">
                <aside class="booking-box">
                    <h3>Book This Package</h3>
                    <form id="bookingForm" method="post" action="/Home/PaymentPage">
                        <label for="travelDate">Travel Date</label>
                        <input id="travelDate" name="TravelDate" type="date" required />

                        <label for="guests">Guests</label>
                        <select id="guests" name="Guests">
                            <option value="1">1 person</option>
                            <option value="2">2 persons</option>
                            <option value="3">3 persons</option>
                            <option value="4">4 persons</option>
                        </select>

                        <label for="email">Email</label>
                        <input id="email" name="Email" type="email" placeholder="you@example.com" required />

                        <label for="phone">Phone</label>
                        <input id="phone" name="Phone" type="tel" placeholder="+91 98765 43210" required />

                        <button type="submit" class="btn btn-primary" onclick="saveBookingData()">Book Now</button>
                    </form>
                </aside>
            </div>
        </div>
    </div>

    <script>
        (function () {
            // 1. DATE RESTRICTION
            const today = new Date().toISOString().split('T')[0];
            document.getElementById('travelDate').setAttribute('min', today);

            // 2. GALLERY & LIGHTBOX
            const main = document.getElementById('mainImage');
            const thumbs = document.querySelectorAll('.thumb');
            const lightbox = document.getElementById('lightbox');
            const lightboxImg = document.getElementById('lightboxImg');

            thumbs.forEach(t => {
                t.addEventListener('click', () => {
                    thumbs.forEach(x => x.classList.remove('active'));
                    t.classList.add('active');
                    const src = t.dataset.src;
                    main.style.backgroundImage = `url('${src}')`;
                    lightboxImg.src = src;
                });
            });

            main.addEventListener('click', () => { lightbox.style.display = 'flex'; });
            lightbox.addEventListener('click', () => { lightbox.style.display = 'none'; });

            // 3. ACCORDION (ITINERARY)
            document.querySelectorAll('.day-header').forEach(h => {
                h.addEventListener('click', () => {
                    const body = h.nextElementSibling;
                    const isOpen = body.style.display === 'block';
                    document.querySelectorAll('.day-body').forEach(db => db.style.display = 'none');
                    document.querySelectorAll('.toggle').forEach(tg => tg.textContent = '+');
                    if (!isOpen) {
                        body.style.display = 'block';
                        h.querySelector('.toggle').textContent = '−';
                    }
                });
            });

            // 4. PRICE CALCULATION (Matched to ₹9,999)
            const guestsSelect = document.getElementById('guests');
            const basePrice = 9999;

            guestsSelect.addEventListener('change', () => {
                const count = parseInt(guestsSelect.value);
                const total = basePrice * count;
                document.getElementById('totalPayable').textContent = `₹${total.toLocaleString('en-IN')}`;
                document.getElementById('priceSummary').textContent = `${count} ${count > 1 ? 'persons' : 'person'}`;
            });
        })();

        // 5. SAVE DATA FOR PAYMENT PAGE
        function saveBookingData() {
            const name = document.getElementById('packageName').innerText;
            const price = document.getElementById('totalPayable').innerText;
            localStorage.setItem('selectedPackageName', name);
            localStorage.setItem('selectedPackagePrice', price);
        }
    </script>
</body>
</html>