@{
    ViewBag.Title = "Kerala Travel Package";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="/css/PackTD.css" />
</head>
<body>

    <section class="hero">
        <img class="hero-img" src="/lib/Image/k1.jpg" alt="Kerala Backwaters" />
        <div class="hero-content">
            <h1>Kerala: Alleppey & Kumarakom Backwaters</h1>
            <p>3 Days • Houseboat Stay • Village Life • Scenic Lagoons</p>
        </div>
    </section>

    <div class="container">
        <div class="flex">

            <div class="left-col">
                <div class="package-header">
                    <div class="package-title">
                        <h2 id="packageName">Discover Kerala: Alleppey Houseboats & Kumarakom</h2>
                        <div class="rating">★ 4.7 (856 reviews)</div>
                    </div>

                    <div style="text-align: right;">
                        <div style="font-size: 14px; color:#666;">Duration</div>
                        <div style="font-weight:700; font-size:16px;">3 Days / 2 Nights</div>
                    </div>
                </div>

                <div class="gallery">
                    <div id="mainImage" class="main-image" style="background-image: url('/lib/Image/k2.jpg');"></div>
                    <div class="thumbs">
                        <button class="thumb active" type="button" data-src="/lib/Image/k2.jpg" style="background-image: url('/lib/Image/k2.jpg');"></button>
                        <button class="thumb" type="button" data-src="/lib/Image/k3.jpg" style="background-image: url('/lib/Image/k3.jpg');"></button>
                        <button class="thumb" type="button" data-src="/lib/Image/k4.jpg" style="background-image: url('/lib/Image/k4.jpg');"></button>
                        <button class="thumb" type="button" data-src="/lib/Image/k5.jpg" style="background-image: url('/lib/Image/k5.jpg');"></button>
                    </div>
                </div>

                <div style="margin-top:16px;">
                    <h3>Overview</h3>
                    <p>Experience Kerala’s serene backwaters. Cruise Alleppey in a traditional houseboat, explore Kumarakom’s lush lagoons, and enjoy authentic village life.</p>
                </div>

                <div class="itinerary">
                    <h3>Day-by-Day Itinerary</h3>
                    <div class="day">
                        <div class="day-header">
                            <h4>Day 1 — Arrival & Alleppey Houseboat</h4>
                            <div class="toggle">+</div>
                        </div>
                        <div class="day-body">
                            <p>Arrive in Alleppey. Board a private houseboat for an overnight cruise through the backwaters. Enjoy Kerala cuisine onboard.</p>
                        </div>
                    </div>

                    <div class="day">
                        <div class="day-header">
                            <h4>Day 2 — Kumarakom & Village Life</h4>
                            <div class="toggle">+</div>
                        </div>
                        <div class="day-body">
                            <p>Disembark and transfer to Kumarakom. Visit the bird sanctuary and relax by the Vembanad Lake.</p>
                        </div>
                    </div>

                    <div class="day">
                        <div class="day-header">
                            <h4>Day 3 — Sunrise & Departure</h4>
                            <div class="toggle">+</div>
                        </div>
                        <div class="day-body">
                            <p>Morning canoe ride through narrow canals. Breakfast at resort, then checkout and transfer for onward journey.</p>
                        </div>
                    </div>
                </div>

                <div class="price-card">
                    <div class="price-row">
                        <div>Base Price (per person)</div>
                        <div class="price-total">₹14,500</div>
                    </div>
                    <div class="price-row">
                        <div>Taxes & Fees (10%)</div>
                        <div id="taxDisplay">₹1,450</div>
                    </div>
                    <div class="price-row">
                        <div>Selected Guests</div>
                        <div id="priceSummary">1 person</div>
                    </div>
                    <hr style="margin:10px 0; border:none; border-top:1px solid #e6e9ef;" />
                    <div style="font-weight:700; display:flex; justify-content:space-between;">
                        <div>Total Payable</div>
                        <div class="price-total" id="totalPayable">₹15,950</div>
                    </div>
                    <div style="margin-top:12px;">
                        <h4 style="font-size:15px; margin-bottom:6px;">What's Included</h4>
                        <div class="list-inline">
                            <div class="included">Houseboat stay</div>
                            <div class="included">Daily breakfast</div>
                            <div class="included">Private transfers</div>
                            <div class="included">Canoe ride</div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="right-col">
                <aside class="booking-box">
                    <h3>Book This Package</h3>
                    <form id="bookingForm" method="post" action="/Home/PaymentPage">
                        <label for="travelDate">Travel Date</label>
                        <input id="travelDate" name="TravelDate" type="date" required />

                        <label for="guests">Guests</label>
                        <select id="guests" name="Guests" required>
                            <option value="1" selected>1 person</option>
                            <option value="2">2 persons</option>
                            <option value="3">3 persons</option>
                            <option value="4">4 persons</option>
                        </select>

                        <label for="contactEmail">Contact Email</label>
                        <input id="contactEmail" name="Email" type="email" placeholder="you@example.com" required />

                        <label for="phone">Phone</label>
                        <input id="phone" name="Phone" type="tel" placeholder="+91 98765 43210" required />

                        <button type="submit" class="btn btn-primary" onclick="saveKeralaData()">Book Now</button>
                    </form>
                </aside>
            </div>
        </div>
    </div>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            // 1. Gallery Logic
            const mainImage = document.getElementById('mainImage');
            const thumbnails = document.querySelectorAll('.thumb');

            thumbnails.forEach(thumb => {
                thumb.addEventListener('click', function () {
                    const newSrc = this.getAttribute('data-src');
                    mainImage.style.backgroundImage = `url('${newSrc}')`;
                    thumbnails.forEach(t => t.classList.remove('active'));
                    this.classList.add('active');
                });
            });

            // 2. Itinerary Accordion
            const dayHeaders = document.querySelectorAll('.day-header');
            dayHeaders.forEach(header => {
                header.addEventListener('click', function () {
                    const body = this.nextElementSibling;
                    const toggleSign = this.querySelector('.toggle');
                    const isOpen = body.style.display === "block";

                    document.querySelectorAll('.day-body').forEach(b => b.style.display = "none");
                    document.querySelectorAll('.toggle').forEach(s => s.textContent = "+");

                    if (!isOpen) {
                        body.style.display = "block";
                        toggleSign.textContent = "-";
                    }
                });
            });

            // 3. Price Calculation
            const guestSelect = document.getElementById('guests');
            const basePrice = 14500;
            const taxRate = 1450;

            guestSelect.addEventListener('change', function() {
                const count = parseInt(this.value);
                const total = (basePrice + taxRate) * count;
                const taxTotal = taxRate * count;

                document.getElementById('priceSummary').textContent = `${count} ${count > 1 ? 'persons' : 'person'}`;
                document.getElementById('taxDisplay').textContent = `₹${taxTotal.toLocaleString('en-IN')}`;
                document.getElementById('totalPayable').textContent = `₹${total.toLocaleString('en-IN')}`;
            });

            // 4. Date Validation
            const today = new Date().toISOString().split('T')[0];
            document.getElementById('travelDate').setAttribute('min', today);
        });

        // 5. Data Persistence
        function saveKeralaData() {
            const name = document.getElementById('packageName').innerText;
            const price = document.getElementById('totalPayable').innerText;
            localStorage.setItem('selectedPackageName', name);
            localStorage.setItem('selectedPackagePrice', price);
        }
    </script>
</body>
</html>