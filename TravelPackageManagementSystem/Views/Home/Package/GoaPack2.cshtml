@{
    ViewBag.Title = "The Goa Classic";
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/css/pack-details.css" />
</head>
<body>
    <partial name="_Navbar" />
    <section class="hero" style="background-image: url('/lib/Image/goa2.jpg');">
        <div class="hero-content">
            <h1>The Goa Classic</h1>
            <p>5 Days • Old Goa Churches • Water Sports • South Goa Relaxation</p>
        </div>
    </section>

    <div class="container">
        <div class="flex">
            <div class="left-col">
                <div class="package-header">
                    <div class="package-title">
                        <h2 id="packageName">Classic Goa: History & Adventure</h2>
                        <div class="rating">★ 4.8 (520 reviews)</div>
                    </div>
                    <div style="text-align: right;">
                        <div style="font-size: 14px; color:#666;">Duration</div>
                        <div style="font-weight:700; font-size:16px;">5 Days / 4 Nights</div>
                    </div>
                </div>
                <div class="gallery">
                    <div id="mainImage" class="main-image" style="background-image: url('/lib/Image/goa3.jpg');"></div>
                    <div class="thumbs">
                        <div class="thumb active" data-src="/lib/Image/goa1.jpg" style="background-image: url('/lib/Image/goa1.jpg');"></div>
                        <div class="thumb" data-src="/lib/Image/goa6.jpg" style="background-image: url('/lib/Image/goa6.jpg');"></div>
                        <div class="thumb" data-src="/lib/Image/goa8.jpg" style="background-image: url('/lib/Image/goa8.jpg');"></div>
                        <div class="thumb" data-src="/lib/Image/goa4.jpg" style="background-image: url('/lib/Image/goa4.jpg');"></div>
                    </div>
                </div>
                <div style="margin-top:16px;">
                    <h3>Overview</h3>
                    <p>Experience the perfect balance of Goa’s party spirit and heritage. From the massive churches of Old Goa to the serene beaches of the South.</p>
                </div>
                <div class="itinerary">
                    <h3>Day-by-Day Itinerary</h3>
                    <div class="day">
                        <div class="day-header">
                            <h4>Day 1-2 — Water Sports & Anjuna</h4>
                            <div class="toggle">+</div>
                        </div>
                        <div class="day-body">
                            <p>Jet skiing, parasailing, and sunset views at Vagator cliffs.</p>
                        </div>
                    </div>
                    <div class="day">
                        <div class="day-header">
                            <h4>Day 3 — Heritage Tour</h4>
                            <div class="toggle">+</div>
                        </div>
                        <div class="day-body">
                            <p>Visit Basilica of Bom Jesus and Se Cathedral in Old Goa.</p>
                        </div>
                    </div>
                    <div class="day">
                        <div class="day-header">
                            <h4>Day 4-5 — South Goa & Departure</h4>
                            <div class="toggle">+</div>
                        </div>
                        <div class="day-body">
                            <p>Relax at Colva beach and head back for departure.</p>
                        </div>
                    </div>
                </div>
                <div class="price-card">
                    <div class="price-row">
                        <div>Base Price (per person)</div>
                        <div class="price-total">₹13,635</div>
                    </div>
                    <div class="price-row">
                        <div>Taxes & Fees (10%)</div>
                        <div id="taxDisplay">₹1,364</div>
                    </div>
                    <div class="price-row">
                        <div>Selected Guests</div>
                        <div id="priceSummary">1 person</div>
                    </div>
                    <hr style="margin:10px 0; border:none; border-top:1px solid #e6e9ef;" />
                    <div style="font-weight:700; display:flex; justify-content:space-between;">
                        <div>Total Payable</div>
                        <div class="price-total" id="totalPayable">₹14,999</div>
                    </div>
                </div>
            </div>
            <div class="right-col">
                <aside class="booking-box">
                    <h3>Book This Package</h3>
                    <form id="bookingForm" method="post" action="/Home/PaymentPage">
                        <label for="travelDate">Travel Date</label>
                        <input id="travelDate" name="TravelDate" type="date" required />

                        <label for="guests">Guests</label>
                        <select id="guests" name="Guests">
                            <option value="1" selected>1 person</option>
                            <option value="2">2 persons</option>
                        </select>

                        <label for="contactEmail">Contact Email</label>
                        <input id="contactEmail" name="Email" type="email" placeholder="you@example.com" required />

                        <label for="phone">Phone</label>
                        <input id="phone" name="Phone" type="tel" placeholder="+91 98765 43210" required />

                        <button type="submit" class="btn btn-primary" onclick="saveClassicGoaData()">Book Now</button>
                    </form>
                </aside>
            </div>
        </div>
    </div>

    <script>
        (function () {

            const main = document.getElementById('mainImage');

            const thumbs = document.querySelectorAll('.thumb');
            const guestsSelect = document.getElementById('guests');
            const totalPerPerson = 14999;

            // Gallery logic
            thumbs.forEach(t => {

                t.addEventListener('click', () => {

                    thumbs.forEach(x => x.classList.remove('active'));

                    t.classList.add('active');

                    main.style.backgroundImage = `url('${t.dataset.src}')`;

                });

            });

            // Accordion logic
            document.querySelectorAll('.day-header').forEach(h => {

                h.addEventListener('click', () => {

                    const body = h.nextElementSibling;

                    const isOpen = body.style.display === 'block';

                    document.querySelectorAll('.day-body').forEach(db => db.style.display = 'none');

                    if (!isOpen) { body.style.display = 'block'; }

                });

            });

            // Dynamic Price Calculation
            guestsSelect.addEventListener('change', () => {
                const count = parseInt(guestsSelect.value);
                const finalTotal = count * totalPerPerson;
                const finalTax = count * 1364;

                document.getElementById('totalPayable').textContent = `₹${finalTotal.toLocaleString('en-IN')}`;
                document.getElementById('taxDisplay').textContent = `₹${finalTax.toLocaleString('en-IN')}`;
                document.getElementById('priceSummary').textContent = `${count} ${count > 1 ? 'persons' : 'person'}`;

            });

            // Set Min Date
            const today = new Date().toISOString().split('T')[0];
            document.getElementById('travelDate').setAttribute('min', today);
        })();

        // Save data for the Payment Page
        function saveClassicGoaData() {
            const name = document.getElementById('packageName').innerText;
            const price = document.getElementById('totalPayable').innerText;

            localStorage.setItem('selectedPackageName', name);
            localStorage.setItem('selectedPackagePrice', price);
        }
    </script>
</body>
</html>