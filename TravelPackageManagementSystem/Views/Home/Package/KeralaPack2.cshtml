@{
    ViewBag.Title = "Kerala Travel Package 2";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="/css/PackTD.css" />
</head>
<body>

    <section class="hero">
        <img class="hero-img" src="/lib/Image/k21.jpg" alt="Munnar Hills" />
        <div class="hero-content">
            <h1>Kerala: Munnar & Thekkady</h1>
            <p>3 Days • Tea Plantations • Periyar Wildlife • Scenic Hills</p>
        </div>
    </section>

    <div class="container">
        <div class="flex">

            <div class="left-col">
                <div class="package-header">
                    <div class="package-title">
                        <h2 id="packageName">Discover Kerala: Munnar Tea Gardens & Thekkady Wildlife</h2>
                        <div class="rating">★ 4.8 (932 reviews)</div>
                    </div>

                    <div style="text-align: right;">
                        <div style="font-size: 14px; color:#666;">Duration</div>
                        <div style="font-weight:700; font-size:16px;">3 Days / 2 Nights</div>
                    </div>
                </div>

                <div class="gallery">
                    <div id="mainImage" class="main-image" style="background-image: url('/lib/Image/k22.jpg');"></div>
                    <div class="thumbs">
                        <button class="thumb active" type="button" data-src="/lib/Image/k22.jpg" style="background-image: url('/lib/Image/k22.jpg');"></button>
                        <button class="thumb" type="button" data-src="/lib/Image/k23.jpg" style="background-image: url('/lib/Image/k23.jpg');"></button>
                        <button class="thumb" type="button" data-src="/lib/Image/k24.jpg" style="background-image: url('/lib/Image/k24.jpg');"></button>
                        <button class="thumb" type="button" data-src="/lib/Image/k25.jpg" style="background-image: url('/lib/Image/k25.jpg');"></button>
                    </div>
                </div>

                <div style="margin-top:16px;">
                    <h3>Overview</h3>
                    <p>Explore Kerala’s hill stations and wildlife. Wander through Munnar’s tea plantations, visit Eravikulam National Park, and enjoy a boat ride on Periyar Lake in Thekkady.</p>
                </div>

                <div class="itinerary">
                    <h3>Day-by-Day Itinerary</h3>
                    <div class="day">
                        <div class="day-header">
                            <h4>Day 1 — Arrival & Munnar Tea Gardens</h4>
                            <div class="toggle">+</div>
                        </div>
                        <div class="day-body">
                            <p>Arrive in Munnar. Visit tea plantations, Mattupetty Dam, and Echo Point. Evening leisure at hill resort.</p>
                        </div>
                    </div>

                    <div class="day">
                        <div class="day-header">
                            <h4>Day 2 — National Park & Transfer to Thekkady</h4>
                            <div class="toggle">+</div>
                        </div>
                        <div class="day-body">
                            <p>Morning visit to Eravikulam National Park. Afternoon drive to Thekkady. Evening cultural show or spice plantation tour.</p>
                        </div>
                    </div>

                    <div class="day">
                        <div class="day-header">
                            <h4>Day 3 — Periyar Wildlife & Departure</h4>
                            <div class="toggle">+</div>
                        </div>
                        <div class="day-body">
                            <p>Boat ride on Periyar Lake to spot elephants and birds. Checkout and transfer for onward journey.</p>
                        </div>
                    </div>
                </div>

                <div class="price-card">
                    <div class="price-row">
                        <div>Base Price (per person)</div>
                        <div class="price-total">₹16,000</div>
                    </div>
                    <div class="price-row">
                        <div>Taxes & Fees (10%)</div>
                        <div id="taxDisplay">₹1,600</div>
                    </div>
                    <div class="price-row">
                        <div>Selected Guests</div>
                        <div id="priceSummary">1 person</div>
                    </div>
                    <hr style="margin:10px 0; border:none; border-top:1px solid #e6e9ef;" />
                    <div style="font-weight:700; display:flex; justify-content:space-between;">
                        <div>Total Payable</div>
                        <div class="price-total" id="totalPayable">₹17,600</div>
                    </div>
                    <div style="margin-top:12px;">
                        <h4 style="font-size:15px; margin-bottom:6px;">What's Included</h4>
                        <div class="list-inline">
                            <div class="included">Hill Resort stays</div>
                            <div class="included">Daily breakfast</div>
                            <div class="included">Private Sightseeing</div>
                            <div class="included">Periyar Boat Ride</div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="right-col">
                <aside class="booking-box">
                    <h3>Book This Package</h3>
                    <form id="bookingForm" method="post" action="/Home/PaymentPage">
                        <label for="travelDate">Travel Date</label>
                        <input id="travelDate" name="TravelDate" type="date" required />

                        <label for="guests">Guests</label>
                        <select id="guests" name="Guests" required>
                            <option value="1" selected>1 person</option>
                            <option value="2">2 persons</option>
                            <option value="3">3 persons</option>
                            <option value="4">4 persons</option>
                        </select>

                        <label for="contactEmail">Contact Email</label>
                        <input id="contactEmail" name="Email" type="email" placeholder="you@example.com" required />

                        <label for="phone">Phone</label>
                        <input id="phone" name="Phone" type="tel" placeholder="+91 98765 43210" required />

                        <button type="submit" class="btn btn-primary" onclick="saveMunnarData()">Book Now</button>
                    </form>
                </aside>
            </div>
        </div>
    </div>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            // 1. Gallery
            const mainImage = document.getElementById('mainImage');
            const thumbnails = document.querySelectorAll('.thumb');
            thumbnails.forEach(thumb => {
                thumb.addEventListener('click', function () {
                    mainImage.style.backgroundImage = `url('${this.getAttribute('data-src')}')`;
                    thumbnails.forEach(t => t.classList.remove('active'));
                    this.classList.add('active');
                });
            });

            // 2. Accordion
            const dayHeaders = document.querySelectorAll('.day-header');
            dayHeaders.forEach(header => {
                header.addEventListener('click', function () {
                    const body = this.nextElementSibling;
                    const toggleSign = this.querySelector('.toggle');
                    const isOpen = body.style.display === "block";
                    document.querySelectorAll('.day-body').forEach(b => b.style.display = "none");
                    document.querySelectorAll('.toggle').forEach(s => s.textContent = "+");
                    if (!isOpen) {
                        body.style.display = "block";
                        toggleSign.textContent = "-";
                    }
                });
            });

            // 3. Price Update
            const guestSelect = document.getElementById('guests');
            const basePrice = 16000;
            const taxPerPerson = 1600;

            guestSelect.addEventListener('change', function() {
                const count = parseInt(this.value);
                const total = (basePrice + taxPerPerson) * count;
                const taxTotal = taxPerPerson * count;
                document.getElementById('priceSummary').textContent = `${count} ${count > 1 ? 'persons' : 'person'}`;
                document.getElementById('taxDisplay').textContent = `₹${taxTotal.toLocaleString('en-IN')}`;
                document.getElementById('totalPayable').textContent = `₹${total.toLocaleString('en-IN')}`;
            });

            // 4. Date Min
            const today = new Date().toISOString().split('T')[0];
            document.getElementById('travelDate').setAttribute('min', today);
        });

        // 5. Save for Payment Page
        function saveMunnarData() {
            const name = document.getElementById('packageName').innerText;
            const price = document.getElementById('totalPayable').innerText;
            localStorage.setItem('selectedPackageName', name);
            localStorage.setItem('selectedPackagePrice', price);
        }
    </script>
</body>
</html>