@{
    ViewBag.Title = "TamilPack1 - Madurai & Thanjavur";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>TamilPack1 - Temple Heritage</title>
    <link rel="stylesheet" href="/css/PackTD.css" />
</head>
<body>
    <section class="hero">
        <img class="hero-img" src="/lib/Image/t1.jpg" alt="Madurai Temple" />
        <div class="hero-content">
            <h1>Tamil Nadu: Madurai & Thanjavur</h1>
            <p>3 Days • Meenakshi Temple • Brihadeeswarar Temple</p>
        </div>
    </section>

    <div class="container">
        <div class="flex">
            <div class="left-col">
                <div class="package-header">
                    <div class="package-title">
                        <h2 id="packageName">Discover Tamil Nadu: Madurai & Thanjavur</h2>
                        <div class="rating">★ 4.6 (742 reviews)</div>
                    </div>
                    <div style="text-align:right;">
                        <div style="font-size:14px;color:#666;">Duration</div>
                        <div style="font-weight:700;font-size:16px;">3 Days / 2 Nights</div>
                    </div>
                </div>

                <div class="gallery">
                    <div id="mainImage" class="main-image" style="background-image:url('/lib/Image/t1.jpg');"></div>
                    <div class="thumbs">
                        <button class="thumb active" data-src="/lib/Image/t1.jpg" style="background-image:url('/lib/Image/t1.jpg');"></button>
                        <button class="thumb" data-src="/lib/Image/t2.jpg" style="background-image:url('/lib/Image/t2.jpg');"></button>
                        <button class="thumb" data-src="/lib/Image/t3.jpg" style="background-image:url('/lib/Image/t3.jpg');"></button>
                        <button class="thumb" data-src="/lib/Image/t4.jpg" style="background-image:url('/lib/Image/t4.jpg');"></button>
                    </div>
                </div>

                <div style="margin-top:16px;">
                    <h3>Overview</h3>
                    <p>Explore Tamil Nadu’s spiritual heart — Meenakshi Amman Temple in Madurai and the UNESCO Brihadeeswarar Temple in Thanjavur.</p>
                </div>

                <div class="itinerary">
                    <h3>Day-by-Day Itinerary</h3>

                    <div class="day">
                        <div class="day-header">
                            <h4>Day 1 — Arrival & Madurai</h4>
                            <span class="toggle">+</span>
                        </div>
                        <div class="day-body" style="display:none;">
                            <p>Arrival in Madurai. Check into your hotel. Visit the magnificent Meenakshi Amman Temple and explore the vibrant local markets nearby.</p>
                        </div>
                    </div>

                    <div class="day">
                        <div class="day-header">
                            <h4>Day 2 — Thanjavur</h4>
                            <span class="toggle">+</span>
                        </div>
                        <div class="day-body" style="display:none;">
                            <p>Early morning drive to Thanjavur. Explore the Great Living Chola Temple - Brihadeeswarar Temple and visit the Thanjavur Royal Palace Museum.</p>
                        </div>
                    </div>

                    <div class="day">
                        <div class="day-header">
                            <h4>Day 3 — Departure</h4>
                            <span class="toggle">+</span>
                        </div>
                        <div class="day-body" style="display:none;">
                            <p>Morning darshan at local shrines. Enjoy a traditional South Indian breakfast before being transferred for your onward journey.</p>
                        </div>
                    </div>
                </div>

                <div class="price-card">
                    <div class="price-row">
                        <div>Base Price (per person)</div>
                        <div id="basePrice">₹11,999</div>
                    </div>
                    <div class="price-row">
                        <div>Taxes & Fees</div>
                        <div id="taxPrice">₹1,200</div>
                    </div>
                    <div class="price-row">
                        <div>Selected Guests</div>
                        <div id="priceSummary">1 person</div>
                    </div>
                    <hr style="margin:10px 0; border:none; border-top:1px solid #eee;" />
                    <div style="font-weight:700; display:flex; justify-content:space-between;">
                        <div>Total Payable</div>
                        <div class="price-total" id="totalPayable">₹13,199</div>
                    </div>
                </div>
            </div>

            <div class="right-col">
                <aside class="booking-box">
                    <h3>Book This Package</h3>
                    <form id="bookingForm" method="post" action="/Home/PaymentPage">
                        <label>Travel Date</label>
                        <input id="travelDate" type="date" required />

                        <label>Guests</label>
                        <select id="guests">
                            <option value="1">1 person</option>
                            <option value="2">2 persons</option>
                            <option value="3">3 persons</option>
                            <option value="4">4 persons</option>
                        </select>

                        <label for="contactEmail">Contact Email</label>
                        <input id="contactEmail" type="email" placeholder="you@example.com" required />

                        <label for="phone">Phone</label>
                        <input id="phone" type="tel" placeholder="+91 98765 43210" required />

                        <button type="submit" class="btn btn-primary" style="width:100%; margin-top:10px;">Book Now</button>
                    </form>
                </aside>
            </div>
        </div>
    </div>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            // 1. GALLERY LOGIC
            const mainImage = document.getElementById('mainImage');
            const thumbnails = document.querySelectorAll('.thumb');

            thumbnails.forEach(thumb => {
                thumb.addEventListener('click', function() {
                    const newSrc = this.getAttribute('data-src');
                    mainImage.style.backgroundImage = `url('${newSrc}')`;
                    thumbnails.forEach(t => t.classList.remove('active'));
                    this.classList.add('active');
                });
            });

            // 2. ITINERARY DROPDOWN LOGIC
            const headers = document.querySelectorAll('.day-header');
            headers.forEach(header => {
                header.addEventListener('click', function() {
                    const body = this.nextElementSibling;
                    const toggle = this.querySelector('.toggle');

                    if (body.style.display === "block") {
                        body.style.display = "none";
                        toggle.textContent = "+";
                    } else {
                        body.style.display = "block";
                        toggle.textContent = "-";
                    }
                });
            });

            // 3. PRICE CALCULATION LOGIC
            const guestSelect = document.getElementById('guests');
            const totalDisplay = document.getElementById('totalPayable');
            const summaryDisplay = document.getElementById('priceSummary');

            const basePricePerPerson = 11999;
            const taxesPerPerson = 1200;

            guestSelect.addEventListener('change', function() {
                const count = parseInt(this.value);
                const total = (basePricePerPerson + taxesPerPerson) * count;

                summaryDisplay.textContent = count + (count > 1 ? " persons" : " person");
                totalDisplay.textContent = "₹" + total.toLocaleString('en-IN');
            });

            // 4. DATE RESTRICTION (Block Past Dates)
            const today = new Date().toISOString().split('T')[0];
            const dateInput = document.getElementById('travelDate');
            if(dateInput) dateInput.setAttribute('min', today);

            // 5. DATA PERSISTENCE ON SUBMIT
            const bookingForm = document.getElementById('bookingForm');
            bookingForm.onsubmit = function() {
                const name = document.getElementById('packageName').innerText;
                const finalTotal = document.getElementById('totalPayable').innerText;

                // Store for the Payment Page
                localStorage.setItem('selectedPackageName', name);
                localStorage.setItem('selectedPackagePrice', finalTotal);

                return true;
            };
        });
    </script>
</body>
</html>