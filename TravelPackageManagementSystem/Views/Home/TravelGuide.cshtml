@{
    ViewData["Title"] = "Travel Guide - India";
    Layout = "_Layout";
}

<style>
    :root {
        --primary-orange: #ff7b54;
        --secondary-yellow: #ffd56b;
        --dark-overlay: rgba(0, 0, 0, 0.6);
    }

    /* Hero Section Overhaul */
    .guide-hero {
        background: linear-gradient(var(--dark-overlay), var(--dark-overlay)), url('https://images.unsplash.com/photo-1524492717547-2249978a62d9?auto=format&fit=crop&w=1600&q=80');
        background-size: cover;
        background-position: center;
        height: 60vh; /* Increased height for impact */
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        text-align: center;
        border-radius: 0 0 40px 40px;
        margin-bottom: -50px;
    }

    /* Floating Search Bar */
    .guide-search-wrapper {
        position: relative;
        z-index: 10;
        max-width: 700px;
        margin: 0 auto;
    }

    .guide-search {
        background: white;
        padding: 8px;
        border-radius: 100px;
        box-shadow: 0 15px 35px rgba(0,0,0,0.15);
        display: flex;
    }

        .guide-search input {
            border: none;
            padding: 15px 30px;
            flex-grow: 1;
            outline: none;
            border-radius: 100px;
            font-size: 1.1rem;
        }

        .guide-search button {
            background: var(--primary-orange);
            border: none;
            color: white;
            padding: 0 40px;
            border-radius: 100px;
            transition: 0.3s;
            font-weight: bold;
        }

            .guide-search button:hover {
                background: #e66a46;
                transform: scale(1.02);
            }

    /* Interest Cards: Uniform Aspect Ratio */
    .interest-card {
        position: relative;
        border-radius: 25px;
        overflow: hidden;
        height: 350px; /* Uniform Height */
        border: none;
        transition: all 0.4s ease;
        box-shadow: 0 10px 20px rgba(0,0,0,0.1);
    }

        .interest-card:hover {
            transform: translateY(-12px);
            box-shadow: 0 20px 40px rgba(0,0,0,0.2);
        }

    .interest-img {
        width: 100%;
        height: 100%;
        object-fit: cover; /* This forces the image to fill the box without stretching */
        transition: 0.5s;
    }

    .interest-card:hover .interest-img {
        transform: scale(1.1);
    }

    .interest-overlay {
        position: absolute;
        inset: 0;
        background: linear-gradient(transparent 40%, rgba(0,0,0,0.85));
        display: flex;
        flex-direction: column;
        justify-content: flex-end;
        padding: 25px;
        color: white;
    }

    /* Article Card: Modern Style */
    .article-card {
        border: none;
        background: white;
        border-radius: 20px;
        overflow: hidden;
        transition: 0.3s;
        height: 100%; /* Ensures all cards in a row match height */
        box-shadow: 0 5px 15px rgba(0,0,0,0.05);
    }

        .article-card:hover {
            box-shadow: 0 12px 25px rgba(0,0,0,0.1);
        }

    .article-img-container {
        height: 200px; /* Fixed height for article thumbnails */
        overflow: hidden;
    }

        .article-img-container img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

    /* Tip Box refinements */
    .tip-box {
        background: white;
        border-left: 6px solid var(--primary-orange);
        padding: 25px;
        border-radius: 15px;
        margin-bottom: 25px;
        box-shadow: 5px 5px 15px rgba(0,0,0,0.02);
    }

</style>

<section class="guide-hero">
    <div class="container">
        <h1 class="display-2 fw-bold mb-3">Explore the Heart of India</h1>
        <p class="fs-4 opacity-90">Your companion for a soul-stirring journey across the subcontinent.</p>
    </div>
</section>

<div class="container mb-5">
    <div class="guide-search-wrapper">
        <div class="guide-search">
            <input type="text" placeholder="Search for cities, food, or festivals...">
            <button>Search</button>
        </div>
    </div>
</div>

<div class="container py-5">
    <div class="text-center mb-5">
        <span class="badge rounded-pill bg-light text-orange mb-2 px-3 py-2 border text-uppercase" style="color: var(--primary-orange)">Categories</span>
        <h2 class="fw-bold display-5">What is your vibe?</h2>
    </div>

    <div class="row g-4 mb-5">
        <div class="col-md-4">
            <div class="interest-card">
                <img src="https://images.unsplash.com/photo-1519225421980-715cb0215aed?auto=format&fit=crop&w=600&q=80" class="interest-img" alt="Culture">
                <div class="interest-overlay">
                    <h3 class="fw-bold">Culture & Heritage</h3>
                    <p class="mb-0 small">Temples, forts, and ancient traditions</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="interest-card">
                <img src="https://images.unsplash.com/photo-1589302168068-964664d93dc0?auto=format&fit=crop&w=600&q=80" class="interest-img" alt="Food">
                <div class="interest-overlay">
                    <h3 class="fw-bold">Cuisine & Street Food</h3>
                    <p class="mb-0 small">A journey of spices and flavors</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="interest-card">
                <img src="~/lib/Image/coorg1.jpg" class="interest-img" alt="Nature">
                <div class="interest-overlay">
                    <h3 class="fw-bold">Nature & Adventure</h3>
                    <p class="mb-0 small">Mountains, backwaters, and beaches</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-5 pt-5 align-items-start">
        <div class="col-lg-7">
            <h2 class="fw-bold display-6 mb-5">Essential Travel Tips</h2>

            <div class="tip-box">
                <div class="d-flex align-items-center mb-3">
                    <div class="icon-circle me-3 mb-0 text-white" style="background: var(--primary-orange); width: 40px; height: 40px; display: flex; align-items: center; justify-content: center; border-radius: 50%;">
                        <i class="fa-solid fa-language"></i>
                    </div>
                    <h5 class="mb-0 fw-bold">Language Basics</h5>
                </div>
                <p class="text-muted">While English is widely spoken, learning a few Hindi phrases like "Namaste" (Hello) and "Shukriya" (Thank you) goes a long way in connecting with locals.</p>
            </div>

            <div class="tip-box">
                <div class="d-flex align-items-center mb-3">
                    <div class="icon-circle me-3 mb-0 text-white" style="background: var(--primary-orange); width: 40px; height: 40px; display: flex; align-items: center; justify-content: center; border-radius: 50%;">
                        <i class="fa-solid fa-wallet"></i>
                    </div>
                    <h5 class="mb-0 fw-bold">Currency & Payments</h5>
                </div>
                <p class="text-muted">Digital payments (UPI) are everywhere, but keep small cash denominations for rickshaws and street food stalls.</p>
            </div>
        </div>

        <div class="col-lg-5 ps-lg-5">
            <div class="card p-4 shadow border-0 sticky-top" style="top: 100px; border-radius: 30px; background: #1a1a1a; color: white;">
                <h4 class="fw-bold mb-4">Best Time to Visit</h4>
                <div class="mb-4">
                    <div class="d-flex justify-content-between mb-2">
                        <span>Winter (Peak)</span>
                        <span class="text-warning">Oct - Mar</span>
                    </div>
                    <div class="progress" style="height: 8px; background: #333;">
                        <div class="progress-bar bg-warning" style="width: 100%"></div>
                    </div>
                </div>
                <div class="mb-4">
                    <div class="d-flex justify-content-between mb-2">
                        <span>Summer (Hill Stations)</span>
                        <span class="text-info">Apr - Jun</span>
                    </div>
                    <div class="progress" style="height: 8px; background: #333;">
                        <div class="progress-bar bg-info" style="width: 60%"></div>
                    </div>
                </div>
                <button class="btn btn-lg w-100 fw-bold mt-3 py-3" style="background: var(--primary-orange); color: white; border-radius: 15px;">Get Full Itinerary</button>
            </div>
        </div>
    </div>
</div>

<section class="py-5 bg-light mt-5">
    <div class="container">
        <div class="d-flex justify-content-between align-items-end mb-5">
            <div>
                
                <h3 class="fw-bold display-6">Must-Read Articles</h3>
                <p class="text-muted mb-0">Expert advice for your next big trip.</p>
            </div>
            <button class="btn btn-outline-dark px-4 rounded-pill">View All</button>
        </div>

        <div class="row g-4">
            <div class="col-md-3">
                <div class="article-card shadow-sm">
                    <div class="article-img-container">
                        <img src="~/lib/Image/jaipur1.jpg" alt="Jaipur">
                    </div>
                    <div class="p-3">
