@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Authentication | EasySafar</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

    <style>
        /* Base Setup */
        body {
            background-color: #000000;
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            overflow: hidden
        }

        .auth-page-wrapper {
            height: 100vh;
            width: 100vw;
            display: flex;
            align-items: center; /* Vertical center */
            justify-content: center; /* Horizontal center */
            background: #1a1a1a; /* Your preferred background color/image */
        }

        /* 3. The box containing your forms */
        .auth-container {
            width: 100%;
            max-width: 450px; /* Limits width so it looks like a card */
            padding: 20px;
            background: #ffffff;
            border-radius: 12px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.5);
            z-index: 10;
        }

        /* Modal Sizing */
        .modal-dialog {
            max-width: 450px;
        }

        .modal-content {
            background-color: #111111;
            border: 1px solid #333;
            border-radius: 15px;
            color: white;
            box-shadow: 0 0 30px rgba(0, 0, 0, 0.5);
        }

        /* Your Specific CSS Integrated */
        #authModal .input-label {
            display: block;
            width: 100%;
            text-align: left;
            color: rgba(255, 255, 255, 0.7);
            font-size: 0.85rem;
            margin-bottom: 5px;
        }

        #authModal .auth-input {
            width: 100%;
            background: #1a1a1a !important;
            border: 1px solid #333 !important;
            color: #fff !important;
            padding: 10px 12px;
            border-radius: 8px;
        }

            #authModal .auth-input::placeholder {
                color: rgba(255, 255, 255, 0.5) !important; /* Adjust 0.5 to 0.8 for more brightness */
                opacity: 1; /* Overrides browser default opacity */
            }

            /* For Internet Explorer 10-11 */
            #authModal .auth-input:-ms-input-placeholder {
                color: rgba(255, 255, 255, 0.5) !important;
            }

            /* For Microsoft Edge */
            #authModal .auth-input::-ms-input-placeholder {
                color: rgba(255, 255, 255, 0.5) !important;
            }

        #authModal .footer-text {
            color: rgba(255, 255, 255, 0.6) !important;
            font-size: 0.9rem;
        }

        #authModal .footer-link {
            color: #ffffff !important;
            font-weight: 700;
            text-decoration: none;
            transition: all 0.3s ease;
        }

            #authModal .footer-link:hover {
                color: #00d2ff !important;
                text-decoration: underline;
            }

        .password-container {
            position: relative;
        }

        .toggle-password {
            position: absolute;
            right: 12px;
            top: 50%;
            transform: translateY(-50%);
            cursor: pointer;
            color: rgba(255, 255, 255, 0.5);
            z-index: 10;
        }

            .toggle-password:hover {
                color: #00d2ff;
            }

        /* Ensure padding-right so text doesn't go under the eye */
        .auth-input-pass {
            padding-right: 40px !important;
        }

        /* Submit Button Style */
        .submit-glow-btn {
            width: 100%;
            padding: 12px;
            background: #ffffff;
            color: #000000;
            border: none;
            border-radius: 8px;
            font-weight: 700;
            margin-top: 10px;
            transition: 0.3s;
        }

            .submit-glow-btn:hover {
                background: #00d2ff;
                transform: translateY(-1px);
            }

        .signup-only {
            display: block; /* Starting on Sign Up as per your requirement */
        }

        .err-msg {
            font-size: 0.75rem;
            color: #ff4d4d;
            display: none;
            text-align: left;
            margin-top: 4px;
        }
    </style>
</head>
<body>

    <div class="modal show d-block" id="authModal" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-body p-4 p-md-5">
                    <div class="text-center mb-4">
                        <h2 id="modalTitle" class="fw-bold h4">Create an Account</h2>
                        <p id="modalSubtitle" class="small">Join EasySafar to start your journey.</p>
                    </div>

                    <form id="authForm">
                        <h2 id="modalTitle">Welcome Back</h2>

                        <div class="mb-3">
                            <label id="emailLabel">Username or Email</label>
                            <input type="text" id="authEmail" class="form-control">
                            <span class="err-msg text-danger" id="err-Username" style="display:none"></span>
                            <span class="err-msg text-danger" id="err-Email" style="display:none"></span>
                        </div>

                        <div class="mb-3 signup-only" style="display:none">
                            <label>Phone Number</label>
                            <input type="text" id="regPhone" class="form-control">
                            <span class="err-msg text-danger" id="err-PhoneNumber" style="display:none"></span>
                        </div>

                        <div class="mb-3">
                            <label>Password</label>
                            <input type="password" id="authPassword" class="form-control">
                            <span class="err-msg text-danger" id="err-Password" style="display:none"></span>
                        </div>

                        <div class="mb-3 signup-only" style="display:none">
                            <label>Confirm Password</label>
                            <input type="password" id="authConfirmPassword" class="form-control">
                            <span class="err-msg text-danger" id="err-ConfirmPassword" style="display:none"></span>
                        </div>

                        <button type="submit" id="submitBtn" class="btn btn-primary">Login →</button>
                        <p><span id="toggleText">Don't have an account?</span> <a href="javascript:void(0)" onclick="handleAuthToggle()" id="toggleAuth">Sign Up</a></p>
                    </form>

                    <div class="text-center mt-4">
                        <p class="footer-text mb-0">
                            <span id="toggleText">Already have an account? </span>
                            <a href="javascript:void(0)" id="toggleAuth" class="footer-link" onclick="handleAuthToggle()">Login</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
            function handleAuthToggle() {
            const signupFields = document.querySelectorAll('.signup-only');
            const modalTitle = document.getElementById('modalTitle');
            const submitBtn = document.getElementById('submitBtn');
            const toggleText = document.getElementById('toggleText');
            const toggleLink = document.getElementById('toggleAuth');
            const emailLabel = document.getElementById('emailLabel');
            const emailInput = document.getElementById('authEmail');

            // Select the column wrappers
            const emailWrapper = document.getElementById('emailWrapper');
            const passwordWrapper = document.getElementById('passwordWrapper');

            const isCurrentlySignup = submitBtn.innerText.includes("Sign Up");

            if (isCurrentlySignup) {
                signupFields.forEach(f => f.style.setProperty('display', 'none', 'important'));
                modalTitle.innerText = "Welcome Back";
                emailLabel.innerText = "Username or Email";
                emailInput.placeholder = "Enter your username or email";

                // Make email and password full width for Login
                emailWrapper.classList.replace('col-md-6', 'col-md-12');
                passwordWrapper.classList.replace('col-md-6', 'col-md-12');

                submitBtn.innerText = "Login →";
                toggleText.innerText = "Don't have an account? ";
                toggleLink.innerText = "Sign Up";
            } else {
                signupFields.forEach(f => f.style.setProperty('display', 'block', 'important'));
                modalTitle.innerText = "Create an Account";
                emailLabel.innerText = "Email Address";
                emailInput.placeholder = "Enter your email";

                // Return to side-by-side for Sign Up
                emailWrapper.classList.replace('col-md-12', 'col-md-6');
                passwordWrapper.classList.replace('col-md-12', 'col-md-6');

                submitBtn.innerText = "Sign Up →";
                toggleText.innerText = "Already have an account? ";
                toggleLink.innerText = "Login";
            }
        }

        document.getElementById('authForm').addEventListener('submit', async function (e) {
            e.preventDefault();
            const isLogin = document.getElementById('submitBtn').innerText.includes("Login");

            let payload = isLogin ? {
                Username: document.getElementById('authEmail').value,
                Password: document.getElementById('authPassword').value
            } : {
                Username: document.getElementById('regUsername').value,
                Email: document.getElementById('authEmail').value,
                PhoneNumber: document.getElementById('regPhone').value,
                Password: document.getElementById('authPassword').value,
                ConfirmPassword: document.getElementById('authConfirmPassword').value
            };

            try {
                const response = await fetch(isLogin ? '/Account/Login' : '/Account/Register', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(payload)
                });

                if (response.ok) {
                    // --- REDIRECT LOGIC START ---
                    // 1. Look for 'returnUrl' in the URL parameters
                    const urlParams = new URLSearchParams(window.location.search);
                    const returnUrl = urlParams.get('returnUrl');

                    // 2. If it exists, go there. Otherwise, go to home.
                    if (returnUrl) {
                        window.location.href = decodeURIComponent(returnUrl);
                    } else {
                        window.location.href = "/";
                    }
                    // --- REDIRECT LOGIC END ---
                } else {
                    const result = await response.json();
                    displayErrors(result);
                }
            } catch (error) {
                console.error("Error:", error);
            }
        });

        document.addEventListener('mousemove', (e) => {
            const authModal = document.getElementById('authModal');
            if (!authModal || !authModal.classList.contains('show')) return;

            const containers = authModal.querySelectorAll('.input-glow-container');
            containers.forEach(container => {
                const rect = container.getBoundingClientRect();
                container.style.setProperty('--mouse-x', `${e.clientX - rect.left}px`);
                container.style.setProperty('--mouse-y', `${e.clientY - rect.top}px`);
            });
        });

                function displayErrors(result) {
            // 1. Hide all previous errors
            document.querySelectorAll('.err-msg').forEach(el => {
                el.style.display = 'none';
                el.innerText = '';
            });

            // 2. Determine if errors are in 'result.errors' (Standard ASP.NET) or 'result' (Custom)
            const errorSource = result.errors || result;

            // 3. Loop through keys (e.g., "Username", "Email")
            Object.keys(errorSource).forEach(key => {
                // Find the span that matches your naming convention: err-Username, err-Email, etc.
                const span = document.getElementById(`err-${key}`);
                if (span) {
                    const errorData = errorSource[key];
                    // Take the first error message if it's an array, otherwise take the string
                    span.innerText = Array.isArray(errorData) ? errorData[0] : errorData;
                    span.style.display = 'block';
                }
            });
        }

            function togglePasswordVisibility(inputId, icon) {
            const passwordInput = document.getElementById(inputId);

            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                icon.classList.replace('bi-eye', 'bi-eye-slash');
            } else {
                passwordInput.type = 'password';
                icon.classList.replace('bi-eye-slash', 'bi-eye');
            }
        }
    </script>

</body>
</html>