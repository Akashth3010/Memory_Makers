@{
    ViewData["Title"] = "Checkout";
    Layout = "_Layout";
    int safeId = ViewBag.BookingId != null ? (int)ViewBag.BookingId : 0;
    string qrUrl = "https://api.qrserver.com/v1/create-qr-code/?size=150x150&data=TravelBooking_" + safeId;
}

<style>
    :root {
        --primary-orange: #ff7b54;
        --secondary-yellow: #ffd56b;
    }

    body {
        background-color: #f4f7f9;
    }

    .payment-card {
        background: white;
        border-radius: 20px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.08);
    }

    .method-selector {
        border: 2px solid #f0f0f0;
        border-radius: 12px;
        padding: 15px;
        cursor: pointer;
        transition: all 0.3s ease;
    }

        .method-selector.selected {
            border-color: var(--primary-orange);
            background: #fff9f7;
        }

    .summary-box {
        background: #1a1a1a;
        color: white;
        border-radius: 20px;
        padding: 25px;
        position: sticky;
        top: 20px;
    }

    .btn-checkout {
        background: linear-gradient(135deg, var(--primary-orange), var(--secondary-yellow));
        border: none;
        padding: 14px;
        border-radius: 12px;
        font-weight: bold;
        width: 100%;
        color: white;
        transition: transform 0.2s;
    }

        .btn-checkout:hover {
            transform: scale(1.02);
            color: black;
        }

    .error-msg {
        color: #dc3545;
        font-size: 0.85em;
        display: none;
        margin-top: 5px;
    }
</style>

<input type="hidden" id="bookingIdStore" value="@safeId" />

<div class="container py-5">
    <div class="row g-4">
        <div class="col-lg-8">
            <div class="payment-card p-4">
                <h4 class="fw-bold mb-4"><i class="fas fa-credit-card me-2 text-primary"></i>Payment Method</h4>

                <div class="row g-3">
                    <div class="col-md-6" onclick="switchTab('card')">
                        <div class="method-selector selected" id="tab-card">
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="pay" id="cardRadio" checked>
                                <label class="form-check-label fw-bold">Credit/Debit Card</label>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6" onclick="switchTab('upi')">
                        <div class="method-selector" id="tab-upi">
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="pay" id="upiRadio">
                                <label class="form-check-label fw-bold">UPI / QR Code</label>
                            </div>
                        </div>
                    </div>
                </div>

                <div id="cardSection" class="mt-4">
                    <div class="row g-3">
                        <div class="col-12">
                            <label class="form-label small fw-bold">CARDHOLDER NAME</label>
                            <input type="text" id="cardHolderName" class="form-control" placeholder="Enter name">
                        </div>
                        <div class="col-12">
                            <label class="form-label small fw-bold">CARD NUMBER</label>
                            <input type="text" id="cardNumber" class="form-control" placeholder="0000 0000 0000 0000" maxlength="19">
                            <div id="cardError" class="error-msg">Invalid card number.</div>
                        </div>
                        <div class="col-6">
                            <label class="form-label small fw-bold">EXPIRY</label>
                            <input type="text" id="cardExpiry" class="form-control" placeholder="MM/YY" maxlength="5">
                            <div id="expiryError" class="error-msg">Invalid or past date.</div>
                        </div>
                        <div class="col-6">
                            <label class="form-label small fw-bold">CVV</label>
                            <input type="password" id="cardCvv" class="form-control" placeholder="***" maxlength="3">
                        </div>
                    </div>
                </div>

                <div id="upiSection" style="display:none;" class="mt-4 text-center">
                    <div class="p-4 border rounded bg-light">
                        <h6 class="fw-bold mb-3">Scan QR Code</h6>
                        <img src="@qrUrl" class="img-fluid mb-3 shadow p-2 bg-white" style="width:150px">
                        <div class="input-group mb-2 mx-auto" style="max-width:300px">
                            <input type="text" id="upiId" class="form-control text-center" placeholder="user@upi">
                            <button class="btn btn-outline-primary" type="button" onclick="validateUPI()">Verify</button>
                        </div>
                        <div id="upiError" class="error-msg">Invalid UPI ID.</div>
                        <div id="upiSuccess" class="text-success small fw-bold" style="display:none;">Verified!</div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="summary-box shadow-lg">
                <h5 class="fw-bold mb-4" style="color: var(--secondary-yellow);">Order Summary</h5>
                <p id="packageNameDisplay" class="small mb-3 text-white-50">Loading Package...</p>
                <div class="d-flex justify-content-between mb-2"><span class="text-secondary small">Booking ID</span><span class="fw-bold">#@safeId</span></div>
                <div class="d-flex justify-content-between mb-2"><span class="text-secondary small">Base Price</span><span id="basePriceDisplay">₹0</span></div>
                <div class="d-flex justify-content-between mb-4"><span class="text-secondary small">GST (18%)</span><span id="gstDisplay">₹0</span></div>
                <hr style="border-top: 1px dashed #555;">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <span class="h5 mb-0">Total</span>
                    <span id="displayPrice" class="h3 mb-0 fw-bold" style="color: var(--primary-orange);">₹0</span>
                </div>
                <button type="button" class="btn-checkout" id="payBtn" onclick="processPayment()">PAY NOW & CONFIRM</button>
            </div>
        </div>
    </div>
</div>

<script>
    let activeMethod = 'Credit Card';
    let upiVerified = false;

    document.addEventListener('DOMContentLoaded', () => {
        const rawPrice = localStorage.getItem('selectedPackagePrice') || "0";
        const savedName = localStorage.getItem('selectedPackageName');
        const totalAmount = parseFloat(rawPrice.replace(/[^0-9.]/g, ''));
        const base = totalAmount / 1.18;
        const gst = totalAmount - base;

        document.getElementById('packageNameDisplay').innerText = savedName || "Travel Package";
        document.getElementById('displayPrice').innerText = "₹" + totalAmount.toLocaleString('en-IN');
        document.getElementById('basePriceDisplay').innerText = "₹" + Math.round(base).toLocaleString('en-IN');
        document.getElementById('gstDisplay').innerText = "₹" + Math.round(gst).toLocaleString('en-IN');
    });

    // --- 1. CARD NUMBER SPACING (4-4-4-4) ---
    document.getElementById('cardNumber').addEventListener('input', function (e) {
        let value = e.target.value.replace(/\D/g, '');
        let formattedValue = value.match(/.{1,4}/g)?.join(' ') || "";
        e.target.value = formattedValue.substring(0, 19);
    });

    // --- 2. EXPIRY SLASH (MM/YY) ---
    document.getElementById('cardExpiry').addEventListener('input', function (e) {
        let value = e.target.value.replace(/\D/g, '');
        if (value.length >= 2) {
            e.target.value = value.substring(0, 2) + '/' + value.substring(2, 4);
        } else {
            e.target.value = value;
        }
        document.getElementById('expiryError').style.display = 'none';
    });

    // --- 3. TAB SWITCHING & RADIO SYNC ---
    function switchTab(type) {
        activeMethod = type === 'card' ? 'Credit Card' : 'UPI';
        document.getElementById('cardSection').style.display = type === 'card' ? 'block' : 'none';
        document.getElementById('upiSection').style.display = type === 'upi' ? 'block' : 'none';
        document.getElementById('tab-card').classList.toggle('selected', type === 'card');
        document.getElementById('tab-upi').classList.toggle('selected', type === 'upi');

        // Fix for the blue circle update
        document.getElementById(type + 'Radio').checked = true;
        upiVerified = (type === 'card');
    }

    // --- 4. EXPIRY DATE VALIDATION (Past Date Block) ---
    function validateExpiryDate(expiryValue) {
        if (expiryValue.length !== 5) return false;
        const [mm, yy] = expiryValue.split('/');
        const month = parseInt(mm, 10);
        const year = parseInt("20" + yy, 10);
        if (month < 1 || month > 12) return false;

        const now = new Date();
        const expiryDate = new Date(year, month - 1, 1);
        const currentMonthDate = new Date(now.getFullYear(), now.getMonth(), 1);

        return expiryDate >= currentMonthDate;
    }

    function validateUPI() {
        const val = document.getElementById('upiId').value.trim().toLowerCase();
        if (val.includes('@@')) {
            document.getElementById('upiSuccess').style.display = 'block';
            document.getElementById('upiError').style.display = 'none';
            upiVerified = true;
        } else {
            document.getElementById('upiError').style.display = 'block';
            upiVerified = false;
        }
    }

    async function processPayment() {
        if (activeMethod === 'UPI' && !upiVerified) { alert("Please verify your UPI ID first!"); return; }

        if (activeMethod === 'Credit Card') {
            const expiryVal = document.getElementById('cardExpiry').value;
            if (!validateExpiryDate(expiryVal)) {
                document.getElementById('expiryError').style.display = 'block';
                alert("Expiry date is invalid or in the past!");
                return;
            }
        }

        const btn = document.getElementById('payBtn');
        btn.disabled = true;
        btn.innerText = "Processing...";

        const currentPkgName = localStorage.getItem('selectedPackageName') || "Travel Package";
        const payload = {
            BookingId: parseInt(document.getElementById('bookingIdStore').value),
            Amount: parseFloat(document.getElementById('displayPrice').innerText.replace(/[^0-9.]/g, '')),
            PaymentMethod: activeMethod,
            TransactionId: "TXN-" + Date.now(),
            Status: "Completed"
        };

        try {
            const res = await fetch('/Payment/SavePayment', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(payload)
            });

            if (res.ok) {
                window.location.href = `/Home/Success?txn=${payload.TransactionId}&amt=${payload.Amount}&pkg=${encodeURIComponent(currentPkgName)}`;
            } else {
                window.location.href = "/Home/Failure?reason=Database Error";
            }
        } catch (error) {
            alert("Connection Failed");
            btn.disabled = false;
            btn.innerText = "PAY NOW & CONFIRM";
        }
    }
</script>